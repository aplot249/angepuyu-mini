.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 进度条 */
.progress-bar {
  display: flex; align-items: center; margin-bottom: 40rpx;
}
.progress-track {
  flex: 1; height: 12rpx; background: #EEE; border-radius: 6rpx; overflow: hidden; margin-right: 20rpx;
}
.dark-mode .progress-track { background: rgba(255,255,255,0.1); }
.progress-fill {
  height: 100%; background: #FF7043; border-radius: 6rpx; transition: width 0.3s ease;
}
.progress-text { font-size: 24rpx; color: var(--text-sub); font-weight: bold; }

/* 听音区 */
.audio-section {
  display: flex; flex-direction: column; align-items: center;
  margin-bottom: 60rpx;
}
.speaker-btn {
  width: 140rpx; height: 140rpx;
  background: linear-gradient(135deg, #FF7043, #FF5722);
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(255, 87, 34, 0.3);
  position: relative;
  transition: transform 0.1s;
}
.speaker-btn:active { transform: scale(0.95); }
.speaker-icon { font-size: 60rpx; color: #fff; z-index: 2; }
.hint-text { margin-top: 30rpx; font-size: 28rpx; color: var(--text-sub); }

/* 播放波纹动画 */
.wave {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  border-radius: 50%; border: 4rpx solid #FF7043; opacity: 0;
}
.playing .w1 { animation: ripple 1.5s infinite; }
.playing .w2 { animation: ripple 1.5s infinite 0.4s; }

@keyframes ripple {
  0% { transform: scale(1); opacity: 0.6; }
  100% { transform: scale(1.6); opacity: 0; }
}

/* 作答区 */
.answer-area {
  min-height: 200rpx;
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  border: 2rpx dashed rgba(0,0,0,0.1);
  display: flex; flex-direction: column; justify-content: center;
}
.dark-mode .answer-area { border-color: rgba(255,255,255,0.1); }

.answer-slots {
  display: flex; flex-wrap: wrap; gap: 16rpx; min-height: 80rpx; align-items: center;
}
.placeholder-line {
  width: 100%; text-align: center; color: var(--text-sub); opacity: 0.5; font-size: 28rpx;
}

/* 单词卡片样式 (共用) */
.word-chip {
  padding: 12rpx 24rpx;
  background: #FFF;
  border: 2rpx solid #E0E0E0;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: var(--text-main);
  font-weight: 500;
  box-shadow: 0 4rpx 0 #E0E0E0; /* 3D effect */
  transition: all 0.2s;
}
.dark-mode .word-chip {
  background: #3E2723; border-color: #5D4037; box-shadow: 0 4rpx 0 #5D4037;
}

/* 作答区已填单词 */
.word-chip.filled {
  background: #E3F2FD; border-color: #90CAF9; box-shadow: 0 4rpx 0 #90CAF9; color: #1565C0;
}
.dark-mode .word-chip.filled {
  background: #1A237E; border-color: #283593; box-shadow: 0 4rpx 0 #283593; color: #E8EAF6;
}

/* 结果反馈 */
.feedback-box {
  margin-top: 30rpx; padding-top: 20rpx; border-top: 1rpx solid rgba(0,0,0,0.05);
}
.status-icon { font-weight: bold; font-size: 30rpx; margin-bottom: 10rpx; }
.correct .status-icon { color: #4CAF50; }
.wrong .status-icon { color: #F44336; }

.ca-label { color: var(--text-sub); font-size: 26rpx; }
.ca-text { color: #F44336; font-weight: bold; margin-left: 10rpx; }
.translation { color: var(--text-sub); font-size: 26rpx; margin-top: 8rpx; font-style: italic; }

/* 选词区 */
.word-bank {
  display: flex; flex-wrap: wrap; gap: 20rpx; justify-content: center;
  margin-bottom: auto; /* 填满剩余空间 */
}
.bank-item.hidden {
  opacity: 0; pointer-events: none; /* 选走后占位但不可见 */
}
.bank-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 0 0 transparent;
}

/* 底部按钮 */
.footer-action {
  padding-top: 30rpx;
  padding-bottom: env(safe-area-inset-bottom);
}
.btn {
  border-radius: 50rpx; font-weight: bold; font-size: 32rpx; height: 96rpx;
  display: flex; align-items: center; justify-content: center; color: #fff;
  transition: opacity 0.2s;
}
.btn:active { opacity: 0.9; }

.check-btn {
  background: #BDBDBD; color: #fff;
}
.check-btn:not(.disabled) {
  background: linear-gradient(90deg, #FF7043, #FF5722);
}
.check-btn.disabled { opacity: 0.6; }

.retry-btn { background: #FF5252; }
.next-btn { background: #4CAF50; }