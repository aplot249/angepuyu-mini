.container {
  height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  overflow: hidden;
}

/* [新增] 统计看板样式 - Quiz 风格 */
.stats-header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 20rpx 30rpx 10rpx;
  /* 悬浮式布局 */
  padding: 24rpx 0;
  background-color: var(--card-bg);
  border-radius: 24rpx;
  /* 轻微边框 */
  border: 2rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 4rpx 12rpx rgba(141, 110, 99, 0.04);
  flex-shrink: 0;
}

.dark-mode .stats-header {
  background-color: #2D2420;
  border-color: rgba(255, 255, 255, 0.08);
}

.stat-box {
  flex: 1;
  display: flex;
  justify-content: center;
  position: relative;
}

/* 统计项之间的竖线分割 */
.stat-box:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 15%;
  height: 70%;
  width: 2rpx;
  background-color: rgba(0, 0, 0, 0.06);
}

.dark-mode .stat-box:not(:last-child)::after {
  background-color: rgba(255, 255, 255, 0.1);
}

.stat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 36rpx;
  font-weight: 900;
  color: var(--text-main);
  line-height: 1.2;
}

.stat-total {
  font-size: 24rpx;
  color: var(--text-sub);
  font-weight: normal;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-sub);
  margin-top: 4rpx;
}

.stat-num.green {
  color: #4CAF50;
}

.stat-num.red {
  color: #F44336;
}

/* Swiper 容器 */
.practice-swiper {
  flex: 1;
  height: 100%;
}

.p-swiper-item {
  padding: 20rpx 30rpx 40rpx;
  /* 增加上边距，与 Header 分开 */
  box-sizing: border-box;
  display: flex;
}

/* 主体卡片 */
.main-card {
  flex: 1;
  background: var(--card-bg);
  border-radius: 36rpx;
  box-shadow: 0 10rpx 40rpx rgba(141, 110, 99, 0.08);
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  /* 卡片本身也加一个极轻微的边框，增强精致感 */
  border: 1rpx solid rgba(0, 0, 0, 0.03);
}

.dark-mode .main-card {
  border-color: rgba(255, 255, 255, 0.05);
}

/* 1. 听音区 */
.audio-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:60rpx;
  margin-bottom: 40rpx;
  flex-shrink: 0;
}

.speaker-btn {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #FF7043, #FF5722);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(255, 87, 34, 0.25);
  position: relative;
  transition: transform 0.1s;
}

.speaker-btn:active {
  transform: scale(0.95);
}

.speaker-icon {
  font-size: 50rpx;
  color: #fff;
  z-index: 2;
}

.hint-text {
  margin-top: 20rpx;
  font-size: var(--text-sm);
  color: var(--text-sub);
  opacity: 0.8;
}

/* 波纹动画 */
.wave {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #FF7043;
  opacity: 0;
}

.playing .w1 {
  animation: ripple 1.5s infinite;
}

.playing .w2 {
  animation: ripple 1.5s infinite 0.4s;
}

@keyframes ripple {
  0% {
    transform: scale(1);
    opacity: 0.6;
  }

  100% {
    transform: scale(1.6);
    opacity: 0;
  }
}

/* 2. 作答区 */
.answer-area {
  min-height: 180rpx;
  background: #F9FAFB;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  border: 2rpx dashed rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-shrink: 0;
}

.dark-mode .answer-area {
  background: rgba(0, 0, 0, 0.2);
  border-color: rgba(255, 255, 255, 0.1);
}

.answer-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  min-height: 80rpx;
  align-items: center;
  justify-content: center;
}

.placeholder-line {
  width: 100%;
  text-align: center;
  color: var(--text-sub);
  opacity: 0.5;
  font-size: var(--text-base);
}

/* 3. 选词区容器 (Flex 1 撑满中间) */
.word-bank-container {
  flex: 0.6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.word-bank {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
  align-content: center;
}

/* 单词卡片样式 */
.word-chip {
  padding: 14rpx 30rpx;
  background: #FFF;
  border: 2rpx solid #EEEEEE;
  border-radius: 20rpx;
  font-size: var(--text-lg);
  color: var(--text-main);
  font-weight: bold;
  box-shadow: 0 4rpx 0 #E0E0E0;
  transition: all 0.2s;
}

.dark-mode .word-chip {
  background: #4E342E;
  border-color: #5D4037;
  box-shadow: 0 4rpx 0 #3E2723;
  color: #EFEBE9;
}

/* 作答区已填单词 */
.word-chip.filled {
  background: #E3F2FD;
  border-color: #90CAF9;
  box-shadow: 0 4rpx 0 #90CAF9;
  color: #1565C0;
}

.dark-mode .word-chip.filled {
  background: #283593;
  border-color: #3949AB;
  box-shadow: 0 4rpx 0 #1A237E;
  color: #E8EAF6;
}

/* 选词区隐藏 */
.bank-item.hidden {
  opacity: 0;
  pointer-events: none;
}

.bank-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 0 0 transparent;
}

/* 结果反馈 */
.feedback-box {
  height: 200rpx;
  flex-direction: column;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  text-align: center;
}

.status-icon {
  font-weight: bold;
  font-size: var(--text-base);
}

.correct-answer{
  margin: 20rpx 0;
}
.correct .status-icon {
  color: #4CAF50;
}

.wrong .status-icon {
  color: #F44336;
}

.ca-text {
  color: #F44336;
  font-weight: bold;
  font-size: var(--text-main);
  display: block;
  margin-top: 8rpx;
}

.translation {
  margin: 20rpx 0;
  color: var(--text-sub);
  font-size: var(--text-sm);
  /* margin-top: 8rpx; */
  font-style: italic;
}

/* 4. 底部按钮区 */
.card-footer {
  margin-top: auto;
}

.btn {
  border-radius: 50rpx;
  font-weight: bold;
  font-size: var(--text-lg);
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  transition: opacity 0.2s;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  width: 100%;
}

.btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.check-btn {
  background: #E0E0E0;
  color: #999;
}

.check-btn:not(.disabled) {
  background: linear-gradient(90deg, #FF7043, #FF5722);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(255, 87, 34, 0.3);
}

.retry-btn {
  background: #FF5252;
  box-shadow: 0 6rpx 20rpx rgba(255, 82, 82, 0.3);
}

.next-btn {
  background: #4CAF50;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
}

/* --- 结果反馈弹窗 --- */
.result-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  backdrop-filter: blur(5px);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.result-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.result-card {
  width: 600rpx;
  background: var(--card-bg);
  border-radius: 40rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
  transform: scale(0.9);
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.result-overlay.show .result-card {
  transform: scale(1);
}

.result-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: var(--text-xl);
  font-weight: 900;
  color: var(--text-main);
  margin-bottom: 10rpx;
}

.result-score {
  font-size: 40rpx;
  font-weight: 900;
  color: #FF7043;
  margin: 10rpx 0;
}

.result-desc {
  font-size: var(--text-base);
  color: var(--text-sub);
  text-align: center;
  margin-bottom: 50rpx;
  line-height: 1.6;
}

.result-actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-base);
  font-weight: bold;
}

.btn-share {
  background: linear-gradient(135deg, #FF7043, #F4511E);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(244, 81, 30, 0.3);
  margin: 0; padding: 0;
}

.btn-share::after { border: none; }

.btn-restart {
  background: #f5f5f5;
  color: var(--text-sub);
}

.btn-continue{
  background: #d7c2c2;
  color: var(--text-sub);
}

.dark-mode .btn-restart {
  background: #3E2723;
  color: #BCAAA4;
}