.header-card {
  /* [修改] 增加相对定位，以便内部绝对定位元素参考 */
  position: relative;
  background: linear-gradient(135deg, #FEC99D, #FF8A65);
  padding: 40rpx;
  border-radius: 30rpx;
  color: #5D4037;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 138, 101, 0.3);
}

/* [新增] 退出按钮样式 */
.logout-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 22rpx;
  color: #5D4037;
  background: rgba(255, 255, 255, 0.3);
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  font-weight: bold;
  z-index: 10;
}

.logout-btn:active {
  background: rgba(255, 255, 255, 0.5);
  opacity: 0.8;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 110rpx !important;
  height: 110rpx !important;
  border-radius: 50%;
  margin: 0 24rpx 0 0 !important;
  background: transparent;
  position: relative;
  overflow: visible;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
}

.edit-badge {
  position: absolute;
  bottom: 0;
  right: -6rpx;
  background: #fff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.info-text {
  display: flex;
  flex-direction: column;
}

.nickname-row {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: 900;
  color: #3E2723;
}

.edit-icon {
  font-size: 28rpx;
  margin-left: 10rpx;
  opacity: 0.6;
  background: rgba(255, 255, 255, 0.3);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.uid {
  font-size: var(--text-xs);
  opacity: 0.8;
  color: #3E2723;
  background: rgba(255, 255, 255, 0.3);
  padding: 2rpx 12rpx;
  border-radius: 10rpx;
  align-self: flex-start;
}

.login-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 10rpx 0;
}

.login-wrapper:active {
  opacity: 0.8;
}

.avatar-placeholder {
  width: 110rpx;
  height: 110rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  border: 4rpx dashed rgba(255, 255, 255, 0.6);
}

.placeholder-icon {
  font-size: 50rpx;
}

.login-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.login-title {
  font-size: 36rpx;
  font-weight: 900;
  color: #3E2723;
  margin-bottom: 6rpx;
}

.login-desc {
  font-size: 24rpx;
  color: #3E2723;
  opacity: 0.7;
}

.login-arrow {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  color: #3E2723;
}

.stats-row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  background: rgba(255, 255, 255, 0.4);
  padding: 20rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
}

.stat-item {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.num {
  font-size: var(--text-xl);
  font-weight: bold;
  color: #3E2723;
}

.label {
  font-size: var(--text-xs);
  opacity: 0.8;
  margin-top: 4rpx;
  color: #3E2723;
}

.share-btn {
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: inherit;
  border: none;
  border-radius: 0;
}

.share-btn::after {
  border: none;
}

.text-yellow {
  color: #F57F17;
}

.text-orange {
  color: #BF360C;
}

.menu-title {
  /* padding: 0 0 18rpx 0; */
  /* font-size: var(--text-lg);
  font-weight: bold;
  color: var(--text-main);  */
  font-size: var(--text-lg);
  font-weight: 800;
  border-left: 8rpx solid #FF7043;
  padding-left: 16rpx;
  color: var(--text-main);
  display: flex;
  align-items: center;
}

.margintop30 {
  margin-top: 30rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  font-size: var(--text-base);
  font-weight: bold;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.menu-icon.purple {
  color: #8E24AA;
  background: #F3E5F5;
}

.menu-icon.blue {
  color: #1E88E5;
  background: #E3F2FD;
}

.menu-icon.green {
  color: #43A047;
  background: #E8F5E9;
}

.menu-icon.red {
  color: #D84315;
  background: #FBE9E7;
}

.menu-icon.gray {
  color: #5D4037;
  background: #D7CCC8;
}

.menu-icon.orange {
  color: #E65100;
  background: #FFE0B2;
}

/* [新增] 橙色图标 */

.status-text {
  font-size: var(--text-sm);
  color: var(--text-sub);
  margin-right: 10rpx;
}

.arrow {
  color: #D7CCC8;
  font-size: var(--text-sm);
}

.footer {
  text-align: center;
  color: #D7CCC8;
  font-size: 20rpx;
  margin-top: 40rpx;
}

.toggle-switch {
  width: 80rpx;
  height: 44rpx;
  border-radius: 22rpx;
  background: #D7CCC8;
  position: relative;
  transition: background 0.3s;
}

.toggle-switch.on {
  background: #FF8A65;
}

.toggle-circle {
  width: 40rpx;
  height: 40rpx;
  background: white;
  border-radius: 50%;
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  transition: left 0.3s;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.toggle-switch.on .toggle-circle {
  left: 38rpx;
}

/* --- 反馈弹窗样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  /* 半透明遮罩 */
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  backdrop-filter: blur(4px);
  /* 磨砂玻璃效果 */
}

.modal-container {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
  animation: modalShow 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}

@keyframes modalShow {
  from {
    transform: scale(0.8);
    opacity: 0;
  }

  to {
    transform: scale(1);
    opacity: 1;
  }
}

.modal-title {
  font-size: 36rpx;
  font-weight: 900;
  color: #3E2723;
  text-align: center;
  margin-bottom: 30rpx;
}

.feedback-input {
  width: 100%;
  height: 240rpx;
  background: #FFF8F3;
  /* 极淡米色背景 */
  border: 2rpx solid #FFCCBC;
  /* 浅蜜桃色边框 */
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #5D4037;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.input-placeholder {
  color: #D7CCC8;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #A1887F;
  margin-bottom: 40rpx;
}

.modal-btns {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

.btn-cancel,
.btn-submit {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.btn-cancel {
  background: #EFEBE9;
  color: #8D6E63;
}

.btn-submit {
  background: linear-gradient(135deg, #FEC99D, #FF8A65);
  color: #5D4037;
  box-shadow: 0 6rpx 16rpx rgba(255, 138, 101, 0.2);
}

.btn-submit:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-cancel:active {
  background: #D7CCC8;
}