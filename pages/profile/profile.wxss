/* [新增] VIP 购买弹窗样式 */
/* ========================================= */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 998;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.vip-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.95);
  width: 600rpx;
  background: #FFF;
  border-radius: 30rpx;
  padding: 40rpx;
  box-sizing: border-box;
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s;
}

.dark-mode .vip-modal {
  background: #252525;
}

.vip-modal.show {
  transform: translate(-50%, -50%) scale(1);
  opacity: 1;
  visibility: visible;
}

.modal-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.dark-mode .modal-title {
  color: #FFF;
}

.modal-desc {
  font-size: 24rpx;
  color: #999;
}

/* 套餐列表 (垂直排列) */
.plan-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.plan-item {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F8F8F8;
  border: 4rpx solid transparent;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  transition: all 0.2s;
}

.dark-mode .plan-item {
  background: #333;
}

/* 选中态 */
.plan-item.active {
  background: #FFF8E1;
  border-color: #FFC107;
  box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, 0.15);
}

.dark-mode .plan-item.active {
  background: #443300;
  border-color: #FFD54F;
}

.plan-info {
  display: flex;
  flex-direction: column;
}

.plan-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.dark-mode .plan-name {
  color: #DDD;
}

.plan-intro {
  font-size: 22rpx;
  color: #999;
}

.plan-price-box {
  text-align: right;
}

.symbol {
  font-size: 24rpx;
  color: #FF6F00;
  font-weight: bold;
}

.amount {
