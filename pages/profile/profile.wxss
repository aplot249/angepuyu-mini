.header-card {
  background: linear-gradient(135deg, #2DD4BF, #059669);
  padding: 40rpx;
  border-radius: 30rpx;
  color: white;
  margin-bottom: 30rpx;
}
.user-info { display: flex; align-items: center; margin-bottom: 40rpx; }
.avatar { width: 100rpx; height: 100rpx; background: rgba(255,255,255,0.3); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 50rpx; margin-right: 20rpx; }
.nickname { font-size: var(--text-xl); font-weight: bold; }
.uid { font-size: var(--text-xs); opacity: 0.8; }

.stats-row { 
  display: grid; 
  grid-template-columns: repeat(4, 1fr); /* 改为4列布局 */
  background: rgba(255,255,255,0.1); 
  padding: 20rpx; 
  border-radius: 20rpx; 
  backdrop-filter: blur(10px); 
}
.stat-item { 
  text-align: center; 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center;
}
.num { font-size: var(--text-lg); font-weight: bold; }
.label { font-size: var(--text-xs); opacity: 0.8; margin-top: 4rpx; }

/* [新增] 清除按钮默认样式的类 */
.share-btn {
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: inherit;
  border: none;
  color: white;
  border-radius: 0;
}
.loginBtn{
  border: none;
  font-size: 24rpx;
  background-color: rgb(90, 120, 211);
}
.share-btn::after { border: none; } /* 清除小程序按钮的伪元素边框 */

.text-yellow { color: #FDE047; }
.text-orange { color: #FDBA74; }

.menu-item { display: flex; justify-content: space-between; align-items: center; padding: 30rpx 0; border-bottom: 1rpx solid rgba(0,0,0,0.05); }
.menu-item:last-child { border-bottom: none; }
.menu-left { display: flex; align-items: center; font-size: var(--text-base); font-weight: bold; }
.menu-icon { width: 60rpx; height: 60rpx; border-radius: 16rpx; display: flex; align-items: center; justify-content: center; margin-right: 20rpx; background: #f3f4f6; }
.menu-icon.purple { color: #8B5CF6; background: #EDE9FE; }
.menu-icon.blue { color: #3B82F6; background: #DBEAFE; }
.menu-icon.green { color: #10B981; background: #D1FAE5; }
.menu-icon.red { color: #EF4444; background: #FEE2E2; } /* 为录音贡献图标添加样式 */

.status-text { font-size: var(--text-sm); color: var(--text-sub); margin-right: 10rpx; }
.arrow { color: #d1d5db; font-size: var(--text-sm); }
.footer { text-align: center; color: #d1d5db; font-size: 20rpx; margin-top: 40rpx; }

/* 开关样式 */
.toggle-switch { width: 80rpx; height: 44rpx; border-radius: 22rpx; background: #e5e7eb; position: relative; transition: background 0.3s; }
.toggle-switch.on { background: #2DD4BF; }
.toggle-circle { width: 40rpx; height: 40rpx; background: white; border-radius: 50%; position: absolute; top: 2rpx; left: 2rpx; transition: left 0.3s; box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2); }
.toggle-switch.on .toggle-circle { left: 38rpx; }