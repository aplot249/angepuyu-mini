/* 顶部余额卡片 - 蜜桃暖色渐变 */
.balance-card {
  background: linear-gradient(135deg, #FEC99D, #FF7043); 
  border-radius: 40rpx;
  padding: 60rpx 40rpx;
  color: #5D4037; /* 深棕色字 */
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 15rpx 40rpx rgba(255, 112, 67, 0.25);
}

.balance-label { font-size: var(--text-sm); opacity: 0.8; margin-bottom: 10rpx; font-weight: bold; }
.balance-value { display: flex; align-items: baseline; }
.num { font-size: 60rpx; font-weight: 900; line-height: 1; color: #3E2723; }
.unit { font-size: var(--text-base); margin-left: 10rpx; font-weight: bold; color: #3E2723; }

.bg-decoration {
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255,255,255,0.25);
  border-radius: 50%;
  filter: blur(20rpx);
}

.section-title {
  font-size: var(--text-lg);
  font-weight: 800;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid var(--secondary);
  line-height: 1;
  color: var(--text-main);
}

/* 规则卡片 */
.rules-card { padding: 30rpx 40rpx; }
.rule-item { display: flex; align-items: center; margin-bottom: 20rpx; font-size: var(--text-sm); color: var(--text-main); }
.rule-item:last-child { margin-bottom: 0; }
.icon { margin-right: 20rpx; width: 40rpx; text-align: center; }
.highlight { color: var(--secondary); font-weight: bold; margin: 0 6rpx; }
.highlight-red { color: #D84315; font-weight: bold; margin: 0 6rpx; }
.divider { height: 1rpx; background: rgba(141, 110, 99, 0.1); margin: 20rpx 0; }

/* 充值列表 */
.purchase-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  background: #FFFFFF;
}
.purchase-item:active { background: #FFF8E1; transform: scale(0.98); }

.item-left { display: flex; align-items: center; }
.coin-icon { 
  width: 80rpx; 
  height: 80rpx; 
  background: #FFF3E0; 
  border-radius: 20rpx; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 40rpx; 
  margin-right: 30rpx;
  color: #FF9800;
}
.item-title { font-size: var(--text-lg); font-weight: bold; margin-bottom: 6rpx; color: var(--text-main); }
.item-desc { font-size: var(--text-xs); color: var(--text-sub); }

.price-btn {
  background: #5D4037; /* 深棕按钮 */
  color: #FFE0B2;
  padding: 12rpx 30rpx;
  border-radius: 20rpx;
  font-weight: bold;
  font-size: var(--text-base);
}

/* 推荐项特殊样式 */
.purchase-item.recommend {
  border-color: #FFCC80; 
  background: linear-gradient(to right, #FFF3E0, #FFFFFF);
  position: relative;
  overflow: hidden;
}

@media (prefers-color-scheme: dark) {
  .purchase-item.recommend {
    background: linear-gradient(to right, #3E2723, var(--card-bg)); 
    border-color: #5D4037;
  }
}

.recommend-tag {
  position: absolute;
  top: 0;
  right: 0;
  background: #FF7043;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-bottom-left-radius: 16rpx;
  font-weight: bold;
}

.coin-icon.infinite { background: #F3E5F5; color: #AB47BC; }
.text-purple { color: #8E24AA; }
.price-btn.purple { background: #8E24AA; color: white; box-shadow: 0 4rpx 12rpx rgba(142, 36, 170, 0.3); }