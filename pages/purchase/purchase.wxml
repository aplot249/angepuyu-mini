<view class="container font-lvl-{{fontSizeLevel}} {{isDarkMode ? 'dark-mode' : ''}}">
  <!-- 顶部余额卡片 -->
  <view class="balance-card">
    <view class="balance-label">当前积分</view>
    <view class="balance-value">
      <text class="num">{{userInfo.points}}</text>
      <text class="unit">点</text>
    </view>
    <view class="bg-decoration"></view>
  </view>

  <!-- 积分规则说明 -->
  <view class="section-title">积分获取与消耗规则</view>
  <view class="card rules-card">
    <view class="rule-item">
      <view class="icon green">🎁</view>
      <text>新用户首次登录赠送 <text class="highlight">50</text> 点</text>
    </view>
    <view class="rule-item">
      <view class="icon green">📅</view>
      <text>每日签到奖励 <text class="highlight">20</text> 点</text>
    </view>
    <view class="rule-item">
      <view class="icon green">📅</view>
      <text>每日分享给别人，奖励 <text class="highlight">20</text> 点</text>
    </view>
    <view class="divider"></view>
    <view class="rule-item">
      <view class="icon red">🔊</view>
      <text>单词发音: <text class="highlight-red">-1</text> 点/次</text>
    </view>
    <view class="rule-item">
      <view class="icon red">🗣️</view>
      <text>短语发音: <text class="highlight-red">-3</text> 点/次</text>
    </view>
    <view class="rule-item">
      <view class="icon red">📄</view>
      <text>导出文档: <text class="highlight-red">-5</text> 点/词条</text>
    </view>
  </view>

  <!-- 充值选项 -->
  <view class="section-title">积分充值</view>
  <view class="purchase-list">
    
    <!-- 选项 1 -->
    <view class="card purchase-item" bindtap="buyPoints" data-amount="{{priceList[0].points}}" data-price="{{priceList[0].price}}" data-desp="{{priceList[0].name}}">
      <view class="item-left">
        <view class="coin-icon">💰</view>
        <view class="item-info">
          <view class="item-title">{{priceList[0].points}} 点数</view>
          <view class="item-desc">{{priceList[0].name}}</view>
        </view>
      </view>
      <view class="price-btn">¥ {{priceList[0].price}}元</view>
    </view>

    <!-- 选项 2 (推荐) -->
    <view class="card purchase-item recommend" bindtap="buyPoints" data-amount="{{priceList[1].points}}" data-price="{{priceList[1].price}}" data-desp="{{priceList[1].name}}">
      <view class="recommend-tag">HOT</view>
      <view class="item-left">
        <view class="coin-icon infinite">♾️</view>
        <view class="item-info">
          <view class="item-title text-purple">{{priceList[1].points > 100000 ?'无限':priceList[1].points}} 点数</view>
          <view class="item-desc">{{priceList[1].name}}</view>
        </view>
      </view>
      <view class="price-btn purple">¥ {{priceList[1].price}}元</view>
    </view>

  </view>
</view>