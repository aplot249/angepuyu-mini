.privacy-content {
  padding: 40rpx;
  min-height: 80vh;
}

.title {
  font-size: var(--text-xl);
  font-weight: 900;
  text-align: center;
  margin-bottom: 20rpx;
  color: var(--text-main);
}

.update-time {
  font-size: var(--text-xs);
  color: var(--text-sub);
  text-align: center;
  margin-bottom: 60rpx;
}

.section {
  margin-bottom: 40rpx;
}

.h3 {
  font-size: var(--text-lg);
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-main);
}

.p {
  font-size: var(--text-sm);
  color: var(--text-main);
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
  opacity: 0.9;
}

.li {
  font-size: var(--text-sm);
  color: var(--text-sub);
  line-height: 1.6;
  display: block;
  padding-left: 20rpx;
  margin-bottom: 10rpx;
}