.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 120rpx; /* 留出底部按钮空间 */
}

/* 头部 */
.doc-header {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFFFFF 100%);
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid rgba(254, 201, 157, 0.2);
}
.dark-mode .doc-header {
  background: linear-gradient(135deg, #3E2723 0%, #2D2420 100%);
  border-bottom-color: rgba(255, 255, 255, 0.05);
}

.doc-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #3E2723;
  margin-bottom: 10rpx;
}
.dark-mode .doc-title { color: #ECEFF1; }

.doc-update-time {
  font-size: 24rpx;
  color: #8D6E63;
}
.dark-mode .doc-update-time { color: #BCAAA4; }

/* 内容区 */
.doc-content {
  padding: 30rpx;
}

.section {
  margin-bottom: 50rpx;
}

.h3 {
  font-size: var(--text-lg);
  font-weight: 900;
  color: #FF7043; /* 主色调 */
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #FFCCBC;
  line-height: 1.2;
}

.p {
  font-size: var(--text-base);
  color: var(--text-main);
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-align: justify;
}

/* 列表项 */
.li {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}
.dot {
  color: #FF7043;
  margin-right: 12rpx;
  font-size: 24rpx;
  line-height: 1.8;
}
.li-content {
  flex: 1;
  font-size: var(--text-base);
  color: var(--text-main);
  line-height: 1.8;
  text-align: justify;
}

.strong {
  font-weight: 900;
  color: #5D4037;
}
.dark-mode .strong { color: #D7CCC8; }

.highlight {
  color: #D84315;
  background: rgba(255, 112, 67, 0.1);
  padding: 0 4rpx;
  border-radius: 4rpx;
}

/* 底部按钮 */
.doc-footer {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  background: var(--bg-color);
  padding: 20rpx 30rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  z-index: 100;
}
.dark-mode .doc-footer { box-shadow: 0 -4rpx 20rpx rgba(255,255,255,0.05); }

.btn-agree {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(90deg, #FF7043, #FF5722);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(230, 74, 25, 0.3);
}
.btn-agree:active { opacity: 0.9; transform: scale(0.98); }