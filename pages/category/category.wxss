.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column; /* 垂直排列：上搜索，下内容 */
  background-color: var(--bg-color);
  overflow: hidden;
}

/* --- [新增] 顶部搜索框样式 --- */
.search-section {
  padding: 20rpx 20rpx;
  background-color: var(--bg-color);
  flex-shrink: 0; /* 防止被压缩 */
  z-index: 10;
}

.search-input-box {
  background-color: #FFFFFF; 
  height: 80rpx; 
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx 0 30rpx;
  /* 样式与首页保持一致：淡橙色边框 + 阴影 */
  border: 4rpx solid rgba(255, 112, 67, 0.15);
  box-shadow: 0 4rpx 12rpx rgba(141, 110, 99, 0.08);
}
.dark-mode .search-input-box {
  background-color: rgba(255,255,255,0.1);
  border-color: rgba(255, 112, 67, 0.2);
}

.search-icon { margin-right: 16rpx; font-size: 30rpx; flex-shrink: 0; }
.real-search-input { flex: 1; height: 100%; font-size: 26rpx; color: var(--text-main); }
.search-placeholder { color: #999; }
.dark-mode .search-placeholder { color: rgba(255,255,255,0.4); }

.search-btn {
  font-size: 26rpx; color: #FF7043; font-weight: bold;
  padding-left: 20rpx; margin-left: 10rpx;
  border-left: 2rpx solid #F5F5F5; line-height: 1.2;
}
.dark-mode .search-btn { border-left-color: rgba(255,255,255,0.1); }
.search-btn:active { opacity: 0.6; }


/* --- [新增] 内容区域容器 (左右分栏的父容器) --- */
.content-area {
  flex: 1; /* 占据剩余高度 */
  display: flex;
  flex-direction: row; /* 左右排列 */
  height: 0; /* 配合 flex: 1 使用，防止被子元素撑开导致无法滚动 */
  border-top: 1rpx solid rgba(0,0,0,0.03);
}


.left-nav {
  width: 30%;
  background: var(--bg-color);
  height: 100%;
  border-right: 1rpx solid rgba(0, 0, 0, 0.05);
}

.nav-item {
  padding: 40rpx 10rpx;
  text-align: center;
  font-size: var(--text-sm);
  color: var(--text-sub);
  position: relative;
}

.nav-item.active {
  color: var(--primary);
  font-weight: bold;
  /* background: #fff; */
  background: var(--bg-color);
  font-size: var(--text-base);
}

.indicator {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 40rpx;
  background: var(--primary);
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.right-content {
  width: 70%;
  height: 100%;
  background: var(--card-bg);
  padding: 30rpx;
  box-sizing: border-box;
}

.content-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.header-line {
  width: 40rpx;
  height: 4rpx;
  background: var(--primary);
  opacity: 0.3;
  border-radius: 4rpx;
}

.header-title {
  margin: 0 20rpx;
  font-weight: bold;
  font-size: var(--text-lg);
}

.sub-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.sub-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 10rpx;
}

.sub-icon {
  font-size: 50rpx;
  margin-bottom: 20rpx;
}

.sub-name {
  font-size: var(--text-sm);
  font-weight: bold;
}

/* [新增] 图标按钮样式 */
.action-row {
  width: 100%;
  display: flex;
  justify-content: center;
}

.circle-btn {
  margin-top: 20rpx;
  width: 180rpx;
  height: 40rpx;
  border-radius: 20%;
  /* 暖色背景 */
  /* background-color: #FFF3E0;  */
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  /* box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05); */
  /* box-shadow: 0 1rpx 2rpx rgba(0,0,0,0.05); */
}

.circle-btn:active {
  transform: scale(0.9);
  background-color: #FFE0B2;
}

.fav-icon {
  font-size: 28rpx;
  line-height: 1;
  padding: 6rpx 2rpx;
  /* border:1px solid; */
  /* color: #FF7043; */
  color: var(--text-sub);
}