/* 头部说明 */
.header-intro { margin-bottom: 30rpx; }
.h2 { font-size: var(--text-xl); font-weight: 800; color: var(--text-main); display: block; margin-bottom: 10rpx; }
.desc { font-size: var(--text-xs); color: var(--text-sub); }

/* 表单卡片 */
.form-card { padding: 10rpx 30rpx; }
.form-group { padding: 20rpx 0; }
.label { font-size: var(--text-xs); font-weight: bold; color: var(--text-sub); margin-bottom: 12rpx; text-transform: uppercase; }
.input-field { font-size: var(--text-base); color: var(--text-main); width: 100%; height: 60rpx; }
.divider { height: 1rpx; background: rgba(0,0,0,0.05); width: 100%; }

.section-title { font-size: var(--text-lg); font-weight: 800; margin: 40rpx 0 20rpx; padding-left: 10rpx; border-left: 8rpx solid var(--secondary); line-height: 1; color: var(--text-main); }

/* 录音卡片 */
.record-card { 
  min-height: 300rpx; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  transition: all 0.3s;
  border: 2rpx dashed rgba(0,0,0,0.1);
}

.record-card.recording-active {
  border-color: var(--primary);
  background: rgba(45, 212, 191, 0.05);
}

/* 状态 A: 待录制 */
.record-placeholder { display: flex; flex-direction: column; align-items: center; }
.mic-circle {
  width: 120rpx; height: 120rpx;
  background: var(--primary);
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(45, 212, 191, 0.3);
  transition: transform 0.1s;
}
.mic-circle:active { transform: scale(0.9); }
.mic-icon { font-size: 50rpx; color: white; }
.hint-text { font-size: var(--text-sm); color: var(--text-sub); }

/* 状态 B: 录制中 */
.record-status { display: flex; flex-direction: column; align-items: center; width: 100%; }
.timer-text { font-size: 60rpx; font-weight: bold; color: var(--primary); margin: 20rpx 0; font-variant-numeric: tabular-nums; }
.stop-btn {
  background: #EF4444; color: white;
  padding: 16rpx 40rpx; border-radius: 40rpx;
  font-size: var(--text-sm); font-weight: bold;
  display: flex; align-items: center;
  box-shadow: 0 6rpx 16rpx rgba(239, 68, 68, 0.3);
}
.stop-icon { margin-right: 10rpx; }

/* 简易波形动画 */
.wave-anim { display: flex; align-items: flex-end; height: 40rpx; gap: 6rpx; }
.bar { width: 8rpx; background: var(--primary); border-radius: 4rpx; animation: wave 0.5s infinite ease-in-out alternate; }
.bar:nth-child(1) { height: 20rpx; animation-delay: 0s; }
.bar:nth-child(2) { height: 30rpx; animation-delay: 0.1s; }
.bar:nth-child(3) { height: 40rpx; animation-delay: 0.2s; }
.bar:nth-child(4) { height: 30rpx; animation-delay: 0.3s; }
.bar:nth-child(5) { height: 20rpx; animation-delay: 0.4s; }
@keyframes wave { from { height: 10rpx; opacity: 0.5; } to { height: 40rpx; opacity: 1; } }

/* 状态 C: 回放 */
.playback-area { width: 100%; }
.audio-info { display: flex; align-items: center; justify-content: center; margin-bottom: 30rpx; background: rgba(0,0,0,0.03); padding: 20rpx; border-radius: 20rpx; }
.file-icon { font-size: 40rpx; margin-right: 20rpx; }
.file-name { font-size: var(--text-sm); font-weight: bold; color: var(--text-main); }

.control-row { display: flex; justify-content: center; gap: 30rpx; }
.ctrl-btn {
  flex: 1; text-align: center; padding: 20rpx 0;
  border-radius: 20rpx; font-size: var(--text-sm); font-weight: bold;
  transition: opacity 0.2s;
}
.ctrl-btn:active { opacity: 0.8; }

.ctrl-btn.play { background: var(--primary); color: white; box-shadow: 0 6rpx 16rpx rgba(45, 212, 191, 0.2); }
.ctrl-btn.play.playing { background: #14B8A6; } /* Darker Teal */

.ctrl-btn.delete { background: #F3F4F6; color: #6B7280; }
.dark-mode .ctrl-btn.delete { background: #374151; color: #9CA3AF; }

/* 底部按钮 */
.footer-action { margin-top: 60rpx; padding-bottom: 60rpx; }
.submit-btn {
  background: linear-gradient(135deg, var(--primary), #059669);
  color: white;
  border-radius: 30rpx;
  font-weight: bold;
  font-size: var(--text-lg);
  padding: 10rpx 0; /* button padding fix */
  box-shadow: 0 10rpx 30rpx rgba(45, 212, 191, 0.4);
  border: none;
}
.btn-hover { transform: scale(0.98); opacity: 0.9; }