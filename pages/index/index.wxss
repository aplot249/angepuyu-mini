/* ... (保留原有顶部背景、导航、轮播图样式) ... */
.header-arc-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(180deg, #FEC99D 0%, #FF8A65 86%, #FFF3E0 100%);
  border-bottom-left-radius: 40% 100rpx;
  border-bottom-right-radius: 40% 100rpx;
  z-index: 0;
  padding-bottom: 120rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 138, 101, 0.15);
}

.dark-mode .header-arc-bg {
  background: linear-gradient(180deg, #3E2723 0%, #4E342E 100%);
}

.nav-content {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 220rpx;
}

.greeting-container {
  display: flex;
  flex-direction: column;
  color: #fff;
}

.greeting-text {
  font-size: var(--text-xl);
  font-weight: 900;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  line-height: 1.2;
}

.rate-badge {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.25);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: var(--text-xs);
  font-weight: bold;
  backdrop-filter: blur(5px);
  align-self: flex-start;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.rate-icon {
  margin-right: 10rpx;
}

.main-content {
  position: relative;
  z-index: 20;
  padding: 0 30rpx 15rpx 30rpx;
}

/* 轮播图 */
.banner-swiper.main {
  width: 100%;
  height: 300rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 20rpx rgba(141, 110, 99, 0.15);
  margin-bottom: 30rpx;
  position: relative;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.banner-title-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 100%);
  display: flex;
  align-items: flex-end;
  padding: 0 24rpx 16rpx;
  box-sizing: border-box;
}

.banner-title {
  color: #fff;
  font-size: var(--text-base);
  font-weight: bold;
}

/* 公告栏 */
.notice-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.dark-mode .notice-bar {
  background: #2D2420;
}

.notice-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
  animation: swing 2s infinite;
}

.notice-swiper {
  flex: 1;
  height: 40rpx;
}

.notice-item {
  font-size: var(--text-sm);
  color: #5D4037;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dark-mode .notice-item {
  color: #D7CCC8;
}

/* [修改] Search Box - 增强凸显效果 */
.search-container {
  /* padding: 0 30rpx; */
  margin-bottom: 40rpx;
}

.search-input-box {
  background-color: #FFFFFF; /* 改为白色背景 */
  height: 90rpx; /* 稍微增高一点点 */
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx; 
  /* 增加较明显的阴影和微弱边框 */
  box-shadow: 0 10rpx 24rpx rgba(141, 110, 99, 0.12);
  border: 1rpx solid rgba(255, 112, 67, 0.1); 
}

.dark-mode .search-input-box {
  background-color: rgba(255,255,255,0.12); /* 夜间模式稍微调亮 */
  border-color: transparent;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.2);
}

.search-icon { 
  margin-right: 16rpx; 
  font-size: 32rpx; 
  flex-shrink: 0; 
}

.real-search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: var(--text-main);
}

.search-placeholder {
  color: #999;
}
.dark-mode .search-placeholder {
  color: rgba(255,255,255,0.4);
}

/* 搜索按钮样式 */
.search-btn {
  font-size: 28rpx;
  color: #FF7043;
  font-weight: bold;
  padding-left: 24rpx;
  margin-left: 10rpx;
  border-left: 2rpx solid #E0E0E0; /* 竖线分割 */
  line-height: 1.2;
}
.search-btn:active {
  opacity: 0.6;
}

/* --- 核心功能区 (加大版) --- */
.func-grid-row {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.func-card {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(141, 110, 99, 0.1);
  position: relative;
  overflow: hidden;
  transition: transform 0.1s;
  /* height: 180rpx; */
  box-sizing: border-box;
}

.func-card:active {
  transform: scale(0.98);
}

/* 配色方案 */
.review-style {
  background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%);
  border: 1rpx solid rgba(0, 188, 212, 0.2);
}

.quiz-style {
  background: linear-gradient(135deg, #FFCCBC 0%, #FFAB91 100%);
  border: 1rpx solid rgba(255, 87, 34, 0.2);
}

.mistake-style {
  background: linear-gradient(135deg, #F8BBD0 0%, #F48FB1 100%);
  border: 1rpx solid rgba(233, 30, 99, 0.2);
}

.wordbook-style {
  background: linear-gradient(135deg, #FFF9C4 0%, #FFF59D 100%);
  border: 1rpx solid rgba(255, 235, 59, 0.2);
}

/* [新增] 知识库与社区配色 */
.knowledge-style {
  background: linear-gradient(135deg, #E1BEE7 0%, #CE93D8 100%);
  border: 1rpx solid rgba(156, 39, 176, 0.2);
}

.community-style {
  background: linear-gradient(135deg, #C8E6C9 0%, #A5D6A7 100%);
  border: 1rpx solid rgba(76, 175, 80, 0.2);
}


.dark-mode .review-style {
  background: #006064;
  border-color: rgba(0, 188, 212, 0.1);
}

.dark-mode .quiz-style {
  background: #BF360C;
  border-color: rgba(255, 87, 34, 0.1);
}

.dark-mode .mistake-style {
  background: #880E4F;
  border-color: rgba(233, 30, 99, 0.1);
}

.dark-mode .wordbook-style {
  background: #F57F17;
  border-color: rgba(255, 235, 59, 0.1);
}

