/* 复用 List/Wordbook 的卡片样式 */
.item-card {
  background: var(--card-bg);
  border-radius: 30rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(141, 110, 99, 0.08);
  border: 1rpx solid rgba(254, 201, 157, 0.2);
}

/* [新增] 首页推荐容器：Grid 布局 */
.daily-card-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 一行两列 */
  gap: 20rpx;
  margin-bottom: 30rpx;
}

/* [新增] 首页单词卡片样式调整 */
/* 强制占满高度，以便在Grid中对齐 */
.word-layout.daily-style {
  margin-bottom: 0; /* Grid gap已处理间距 */
  height: 100%; 
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* [新增] 首页短语卡片样式调整 */
/* 短语通常较长，强制跨越两列，保持通栏显示 */
.phrase-layout.daily-style {
  grid-column: span 2;
  margin-bottom: 0;
}

/* Word Layout (通用) */
.word-layout .card-main { display: flex; flex-direction: column; flex: 1; } /* 改为垂直排列适应无图布局 */
/* 首页不需要图片样式了，因为WXML中删除了图片 */

.info-col { flex: 1; display: flex; flex-direction: column; }
.row-flex { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 10rpx; }
.sw-text { font-size: 32rpx; font-weight: 900; color: var(--text-main); line-height: 1.2; word-break: break-all; }

.play-btn {
  width: 60rpx; height: 60rpx;
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
  font-size: 30rpx; color: #FF7043;
  box-shadow: 0 4rpx 10rpx rgba(255, 112, 67, 0.2);
  flex-shrink: 0; margin-left: 10rpx;
}

.homonym-box {
  display: flex; align-items: center; margin: 10rpx 0 16rpx;
  background: #FFF8F3; padding: 4rpx 10rpx; border-radius: 10rpx; align-self: flex-start;
}
.tag { font-size: 18rpx; background: #FFCCBC; color: #BF360C; padding: 2rpx 6rpx; border-radius: 6rpx; margin-right: 8rpx; font-weight: bold; }
.hm-text { font-size: 24rpx; color: #5D4037; font-weight: bold; }

.trans-box { display: flex; flex-direction: column; margin-top: auto; /* 把翻译推到底部 */ }
.cn-text { font-size: 28rpx; font-weight: 900; color: var(--secondary); margin-bottom: 4rpx; }
.en-text { font-size: 22rpx; color: var(--text-sub); font-style: italic; }

/* Phrase Layout (通用) */
.phrase-layout { border-left: 8rpx solid var(--secondary); }
.phrase-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20rpx; }
.sw-sentence { font-size: 34rpx; font-weight: 900; color: var(--text-main); line-height: 1.4; width: 85%; word-wrap: break-word; }
.play-btn.large { width: 70rpx; height: 70rpx; font-size: 36rpx; }
.homonym-row { display: flex; align-items: baseline; margin-bottom: 20rpx; background: #FFF8F3; padding: 10rpx 20rpx; border-radius: 16rpx; }
.hm-sentence { font-size: 26rpx; color: #5D4037; font-weight: bold; margin-left: 14rpx; }
.meaning-col { display: flex; flex-direction: column; padding-bottom: 20rpx; border-bottom: 2rpx dashed rgba(141, 110, 99, 0.1); margin-bottom: 20rpx; }
.cn-sentence { font-size: 30rpx; font-weight: bold; color: var(--secondary); margin-bottom: 8rpx; }
.en-sentence { font-size: 24rpx; color: var(--text-sub); }

/* Footer */
.card-footer { display: flex; justify-content: space-between; align-items: center; margin-top: 20rpx; padding-top: 10rpx; border-top: 1rpx dashed rgba(0,0,0,0.05); }
.action-fav { display: flex; align-items: center; }
.fav-icon { font-size: 32rpx; margin-right: 6rpx; }
.fav-label { font-size: 22rpx; font-weight: bold; color: #D84315; }
.action-fix text { font-size: 20rpx; color: var(--text-sub); text-decoration: underline; }

/* 首页特有样式 */
.home-banner { padding: 40rpx 0; margin-bottom: 20rpx; }
.greeting { font-size: 60rpx; font-weight: 900; color: var(--text-main); margin-bottom: 10rpx; }
.date-info { font-size: var(--text-sm); color: var(--text-sub); }

.section-title { font-size: var(--text-lg); font-weight: 800; margin-bottom: 20rpx; border-left: 8rpx solid var(--primary); padding-left: 16rpx; color: var(--text-main); }

.quick-nav { display: flex; justify-content: space-between; margin-top: 10rpx; }
.nav-item { width: 48%; background: var(--card-bg); padding: 30rpx; border-radius: 20rpx; display: flex; align-items: center; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05); }
.nav-icon { width: 80rpx; height: 80rpx; border-radius: 20rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; margin-right: 20rpx; }
.nav-icon.orange { background: #FFF3E0; color: #FF9800; }
.nav-icon.purple { background: #F3E5F5; color: #9C27B0; }