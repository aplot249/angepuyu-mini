/* --- 标题通用 --- */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0 24rpx;
}

.section-title {
  font-size: var(--text-lg);
  font-weight: 800;
  border-left: 8rpx solid #FF7043;
  padding-left: 16rpx;
