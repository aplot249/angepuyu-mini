/* ... (保留原有的 header-arc-bg, nav-content, greeting 等样式) ... */
/* --- 顶部弧形背景区域 --- */
.header-arc-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(180deg, #FEC99D 0%, #FF8A65 80%, #FFF3E0 100%);
  border-bottom-left-radius: 40% 100rpx;
  border-bottom-right-radius: 40% 100rpx;
  z-index: 0;
  padding-bottom: 120rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 138, 101, 0.15);
}

.dark-mode .header-arc-bg {
  background: linear-gradient(180deg, #3E2723 0%, #4E342E 100%);
}

.nav-content {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 220rpx;
}

.greeting-container {
  display: flex;
  flex-direction: column;
  color: #fff;
}

.greeting-text {
  font-size: var(--text-xl);
  font-weight: 900;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  line-height: 1.2;
}

.rate-badge {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.25);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: var(--text-xs);
  font-weight: bold;
  backdrop-filter: blur(5px);
  align-self: flex-start;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.rate-icon {
  margin-right: 10rpx;
}

.main-content {
  position: relative;
  z-index: 20;
  padding: 0 30rpx 20rpx;
}

/* ... (保留轮播图、公告栏样式) ... */
.banner-swiper.main {
  width: 100%;
  height: 280rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 20rpx rgba(141, 110, 99, 0.15);
  margin-bottom: 30rpx;
  position: relative;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.banner-title-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 100%);
  display: flex;
  align-items: flex-end;
  padding: 0 24rpx 16rpx;
  box-sizing: border-box;
}

.banner-title {
  color: #fff;
  font-size: var(--text-base);
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 90%;
}

.notice-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.dark-mode .notice-bar {
  background: #2D2420;
}

.notice-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
  animation: swing 2s infinite;
}

.notice-swiper {
  flex: 1;
  height: 40rpx;
}

.notice-item {
  font-size: var(--text-sm);
  color: #5D4037;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dark-mode .notice-item {
  color: #D7CCC8;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: var(--text-lg);
  font-weight: 800;
  border-left: 8rpx solid #FF7043;
  padding-left: 16rpx;
  color: var(--text-main);
  display: flex;
  align-items: center;
}

.section-tag {
  font-size: calc(var(--text-xs) - 2rpx);
  color: #FF7043;
  background: #FBE9E7;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
}

.refresh-btn {
  font-size: var(--text-xs);
  color: var(--text-sub);
  background: rgba(0, 0, 0, 0.05);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.refresh-btn:active {
  opacity: 0.7;
}

/* [新增] 每日单词 Grid 布局 */
.daily-word-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  /* 1行2列 */
  gap: 20rpx;
  margin-bottom: 30rpx;
}

/* [新增] 小单词卡片样式 (无图) */
.word-card-mini {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(141, 110, 99, 0.08);
  border: 1rpx solid rgba(254, 201, 157, 0.2);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  /* 撑满 Grid 高度 */
  box-sizing: border-box;
}

.word-card-mini .info-col {
  flex: 1;
}
.row-flex{
  display: flex;
  justify-content: space-between;
}
.word-card-mini .sw-text {
  font-size: var(--text-lg);
  /* 稍微调小一点 */
  font-weight: 900;
  color: var(--text-main);
  word-break: break-all;
}

.word-card-mini .play-btn.mini {
  width: 50rpx;
  height: 50rpx;
  font-size: 26rpx;
  /* 小播放按钮 */
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FF7043;
  flex-shrink: 0;
  /* margin-left: 10rpx; */
}

.word-card-mini .homonym-box {
  margin: 12rpx 0;
  display: inline-flex;
  align-items: center;
  background: #FFF8F3;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.dark-mode .homonym-box {
  background: rgba(255, 255, 255, 0.05);
}

.word-card-mini .tag {
  font-size: 18rpx;
  padding: 2rpx 6rpx;
  margin-right: 6rpx;
}

.word-card-mini .hm-text {
  font-size: 22rpx;
  color: #5D4037;
  font-weight: bold;
}

.dark-mode .hm-text {
  color: #BCAAA4;
}

.word-card-mini .trans-box {
  margin-top: auto;
}

.word-card-mini .cn-text {
  font-size: 28rpx;
  font-weight: 900;
  color: #FF7043;
  margin-bottom: 2rpx;
}

.word-card-mini .en-text {
  font-size: 20rpx;
  color: var(--text-sub);
  font-style: italic;
}

.card-footer-mini {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 10rpx;
  border-top: 1rpx dashed rgba(0, 0, 0, 0.05);
}

.card-footer-mini .fav-icon {
  font-size: 32rpx;
}

/* ... (后续样式保持不变) ... */
.banner-swiper.middle {
  width: 100%;
  height: 140rpx;
  margin: 10rpx 0 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.item-card {
  background: var(--card-bg);
  border-radius: 30rpx;
  /* padding: 30rpx; */
  /* margin-bottom: 30rpx; */
  box-shadow: 0 8rpx 24rpx rgba(141, 110, 99, 0.08);
  border: 1rpx solid rgba(254, 201, 157, 0.2);
}

.phrase-layout {
  border-left: 8rpx solid #FF7043;
}

.phrase-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.sw-sentence {
  font-size: var(--text-lg);
  font-weight: 900;
  color: var(--text-main);
  line-height: 1.4;
  width: 85%;
}

.play-btn.large {
  width: 70rpx;
  height: 70rpx;
  font-size: 36rpx;
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FF7043;
}

.homonym-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
  background: #FFF8F3;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
}

.dark-mode .homonym-row {
  background: rgba(255, 255, 255, 0.05);
}

.hm-sentence {
  font-size: var(--text-sm);
  color: #5D4037;
  font-weight: bold;
  margin-left: 10rpx;
}

.meaning-col {
  padding-bottom: 20rpx;
  border-bottom: 2rpx dashed rgba(141, 110, 99, 0.1);
  /* margin-bottom: 20rpx; */
}

.card-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.action-fav {
  display: flex;
  align-items: center;
}

.fav-icon {
  margin-right: 6rpx;
}

.fav-label {
  font-size: var(--text-xs);
  color: #D84315;
  font-weight: bold;
}

.action-fix {
  font-size: calc(var(--text-xs) - 2rpx);
  color: var(--text-sub);
  text-decoration: underline;
  padding: 10rpx;
}

@keyframes swing {

  0%,
  100% {
    transform: rotate(0deg);
  }

  20% {
    transform: rotate(15deg);
  }

  40% {
    transform: rotate(-10deg);
  }

  60% {
    transform: rotate(5deg);
  }

  80% {
    transform: rotate(-5deg);
  }
}