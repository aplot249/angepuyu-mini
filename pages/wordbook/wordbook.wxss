/* 复用部分 List 页面布局逻辑 */
.list-page { padding: 0; height: 100vh; display: flex; flex-direction: column; overflow: hidden; }

.fixed-header {
  background: var(--bg-color);
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(141, 110, 99, 0.05);
  z-index: 20;
}

.search-bar {
  background: var(--card-bg);
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(141, 110, 99, 0.05);
  border: 2rpx solid rgba(254, 201, 157, 0.3);
}
.search-icon { margin-right: 10rpx; color: var(--text-sub); }
.search-input { font-size: var(--text-sm); width: 100%; color: var(--text-main); }

.study-time-bar {
  display: flex;
  align-items: center;
  font-size: var(--text-xs);
  color: var(--text-sub);
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}
.time-icon { margin-right: 8rpx; }
.time-val { font-weight: bold; color: var(--secondary); margin-left: 8rpx; }

/* Tab 样式 */
.segment-tab {
  display: flex;
  background: #EFEBE9;
  border-radius: 20rpx;
  padding: 8rpx;
}
.dark-mode .segment-tab { background: #3E2723; }

.segment-item {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  font-size: var(--text-sm);
  color: var(--text-sub);
  border-radius: 16rpx;
  font-weight: bold;
  transition: all 0.3s;
}
.segment-item.active {
  background: var(--card-bg);
  color: var(--secondary);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.segment-item.active:nth-child(2) { color: #BF360C; }

/* Swiper 内容区 */
.content-swiper { flex: 1; height: 0; }
.scroll-area { height: 100%; padding: 20rpx 30rpx; box-sizing: border-box; }

/* --- 卡片通用容器 --- */
.item-card {
  display: flex;
  align-items: flex-start; 
  background: var(--card-bg);
  border-radius: 30rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(141, 110, 99, 0.08);
  border: 1rpx solid rgba(254, 201, 157, 0.2);
}

/* 复选框区域 */
.checkbox-area { 
  padding: 0 20rpx 0 0; 
  display: flex; 
  align-items: center;
  height: auto;
  align-self: stretch; /* 让复选框区域高度撑满，方便垂直居中 */
  justify-content: center;
}
.custom-checkbox {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 4rpx solid #D7CCC8;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}
.custom-checkbox.checked {
  background: var(--primary);
  border-color: var(--primary);
}
.phrase-layout .custom-checkbox.checked {
  background: var(--secondary);
  border-color: var(--secondary);
}
.check-mark { color: white; font-size: 28rpx; font-weight: bold; }

/* 右侧内容容器 */
.card-content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* --- Word Layout 样式 (复用 List) --- */
.word-layout .card-main {
  display: flex;
  margin-bottom: 20rpx;
}

.word-img {
  width: 160rpx; /* 稍微调小一点适配左侧有checkbox的情况 */
  height: 160rpx;
  border-radius: 24rpx;
  margin-left: 20rpx;
  background-color: #FFF3E0;
  border: 2rpx solid rgba(254, 201, 157, 0.3);
  flex-shrink: 0;
}

.info-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.row-flex {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.sw-text {
  font-size: var(--text-xl);
  font-weight: 900;
  color: var(--text-main);
  line-height: 1.2;
}

.play-btn { 
  width: 64rpx; 
  height: 64rpx; 
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
  border-radius: 50%; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 32rpx;
  color: #FF7043;
  flex-shrink: 0; 
  margin-left: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(255, 112, 67, 0.2);
}
.play-btn:active { transform: scale(0.9); }

.homonym-box {
  display: flex; align-items: center;
  margin: 10rpx 0;
  background: #FFF8F3;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}
.tag {
  font-size: 20rpx;
  background: #FFCCBC;
  color: #BF360C;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  font-weight: bold;
}
.hm-text {
  font-size: var(--text-base);
  color: #5D4037;
  font-weight: bold;
}

.trans-box { display: flex; flex-direction: column; }
.cn-text {
  font-size: var(--text-lg);
  font-weight: 900;
  color: var(--secondary);
  margin-bottom: 4rpx;
}
.en-text {
  font-size: var(--text-sm);
  color: var(--text-sub);
  font-style: italic;
}

/* --- Phrase Layout 样式 --- */
.phrase-layout { border-left: 8rpx solid var(--secondary); }

.phrase-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.sw-sentence {
  font-size: var(--text-xl);
  font-weight: 900;
  color: var(--text-main);
  line-height: 1.4;
  width: 85%;
  word-wrap: break-word;
}

.play-btn.large { width: 70rpx; height: 70rpx; font-size: 36rpx; }

.homonym-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
  background: #FFF8F3;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
}
.hm-sentence {
  font-size: var(--text-base);
  color: #5D4037;
  font-weight: bold;
  margin-left: 14rpx;
}

.meaning-col {
  display: flex; flex-direction: column;
  padding-bottom: 20rpx;
  border-bottom: 2rpx dashed rgba(141, 110, 99, 0.1);
  margin-bottom: 20rpx;
}
.cn-sentence {
  font-size: var(--text-lg);
  font-weight: bold;
  color: var(--secondary);
  margin-bottom: 8rpx;
}
.en-sentence {
  font-size: var(--text-sm);
  color: var(--text-sub);
}

/* --- 底部操作栏 --- */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 10rpx;
}

.action-fav {
  display: flex;
  align-items: center;
  background: #FBE9E7;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
}
.fav-icon { font-size: 32rpx; margin-right: 10rpx; }
.fav-label { font-size: var(--text-sm); font-weight: bold; color: #D84315; }

.action-fix { padding: 10rpx; }
.action-fix text {
  font-size: 22rpx;
  color: var(--text-sub);
  text-decoration: underline;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  opacity: 0.5;
}
.empty-icon { font-size: 80rpx; margin-bottom: 20rpx; background: var(--card-bg); padding: 40rpx; border-radius: 50%; color: #FFCCBC; }

.loading-tip { text-align: center; padding: 30rpx; color: var(--text-sub); font-size: var(--text-xs); }

/* 浮动按钮组 */
.fab-group {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  z-index: 50;
}
.fab-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(141, 110, 99, 0.2);
  transition: transform 0.1s;
}
.fab-icon { font-size: 40rpx; }
.btn-hover { transform: scale(0.9); opacity: 0.9; }

.fab-btn.blue { background: linear-gradient(135deg, #FFD54F, #FFB300); color: white; } 
.fab-btn.teal { background: linear-gradient(135deg, #FFCCBC, #FF8A65); color: white; } 
.fab-btn.purple { background: linear-gradient(135deg, #F48FB1, #EC407A); color: white; }
.fab-btn.gray { background: linear-gradient(135deg, #BCAAA4, #8D6E63); color: white; }