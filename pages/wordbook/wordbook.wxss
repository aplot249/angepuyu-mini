/* 复用部分 List 页面布局逻辑 */
.list-page { padding: 0; height: 100vh; display: flex; flex-direction: column; overflow: hidden; }

.fixed-header {
  background: var(--bg-color);
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(141, 110, 99, 0.05);
  z-index: 20;
}

.search-bar {
  background: var(--card-bg);
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(141, 110, 99, 0.05);
  border: 1rpx solid rgba(254, 201, 157, 0.3); /* 微弱的蜜桃色边框 */
}
.search-icon { margin-right: 10rpx; color: var(--text-sub); }
.search-input { font-size: var(--text-sm); width: 100%; color: var(--text-main); }

/* Tab 样式 */
.segment-tab {
  display: flex;
  background: #EFEBE9; /* 暖灰底 */
  border-radius: 20rpx;
  padding: 6rpx;
}
.dark-mode .segment-tab { background: #3E2723; }

.segment-item {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  font-size: var(--text-sm);
  color: var(--text-sub);
  border-radius: 16rpx;
  font-weight: bold;
  transition: all 0.3s;
}
.segment-item.active {
  background: var(--card-bg);
  color: var(--secondary); /* 激活色改为珊瑚色 */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
/* 短语Tab激活时用稍深一点的颜色 */
.segment-item.active:nth-child(2) { color: #BF360C; }


/* Swiper 内容区 */
.content-swiper { flex: 1; height: 0; }
.scroll-area { height: 100%; padding: 20rpx 30rpx; box-sizing: border-box; }

/* 卡片样式 */
.item-card {
  display: flex;
  align-items: flex-start; 
  border: 1rpx solid rgba(254, 201, 157, 0.2); /* 极淡的蜜桃色边框 */
  padding: 30rpx;
}
.phrase-style { border-left: 8rpx solid var(--secondary); }

/* 复选框区域 */
.checkbox-area { 
  padding: 0 20rpx 0 0; 
  display: flex; 
  align-items: center;
  height: 100%;
}
.custom-checkbox {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 4rpx solid #D7CCC8; /* 暖灰色边框 */
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}
.custom-checkbox.checked {
  background: var(--primary); /* 蜜桃色 */
  border-color: var(--primary);
}
.phrase-style .custom-checkbox.checked {
  background: var(--secondary);
  border-color: var(--secondary);
}
.check-mark { color: white; font-size: 28rpx; font-weight: bold; }

/* 内容区域 */
.content-area { flex: 1; }
.row-top { display: flex; justify-content: space-between; align-items: center; margin-bottom: 10rpx; }
.swahili { font-size: var(--text-lg); font-weight: 800; color: var(--text-main); }

.play-btn { 
  width: 64rpx; 
  height: 64rpx; 
  background: #FFF3E0; /* 淡橙色背景 */
  border-radius: 50%; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 32rpx;
  color: #FF8A65; /* 珊瑚色图标 */
  flex-shrink: 0; 
}
.play-btn.orange { background: #FBE9E7; color: #D84315; }

.homonym-tag {
  display: inline-block;
  background: #EFEBE9;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: var(--text-xs);
  color: var(--text-sub);
  margin-bottom: 12rpx;
  font-family: monospace;
}
.chinese { font-size: var(--text-sm); font-weight: bold; color: var(--text-main); opacity: 0.9; }

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  opacity: 0.5;
}
.empty-icon { font-size: 80rpx; margin-bottom: 20rpx; background: var(--card-bg); padding: 40rpx; border-radius: 50%; color: #FFCCBC; }

.loading-tip { text-align: center; padding: 30rpx; color: var(--text-sub); font-size: var(--text-xs); }

/* 浮动按钮组 - 暖色调改造 */
.fab-group {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  z-index: 50;
}
.fab-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(141, 110, 99, 0.2);
  transition: transform 0.1s;
}
.fab-icon { font-size: 40rpx; }
.btn-hover { transform: scale(0.9); opacity: 0.9; }

/* 颜色变体：改为暖色系搭配 */
/* 导出：改为暖黄色 */
.fab-btn.blue { background: linear-gradient(135deg, #FFD54F, #FFB300); color: white; } 
/* 播放：改为蜜桃色 */
.fab-btn.teal { background: linear-gradient(135deg, #FFCCBC, #FF8A65); color: white; } 
/* 全选：改为暖粉色 */
.fab-btn.purple { background: linear-gradient(135deg, #F48FB1, #EC407A); color: white; }
/* 全不选：暖灰色 */
.fab-btn.gray { background: linear-gradient(135deg, #BCAAA4, #8D6E63); color: white; }