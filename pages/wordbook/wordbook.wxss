/* 子按钮样式 */
.sub-btn {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 10rpx;
  color: white;
}

.sub-label {
  font-size: 22rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  white-space: nowrap;
  background: rgba(0, 0, 0, 0.3);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 颜色 */
