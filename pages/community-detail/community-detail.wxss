.container { 
  background: var(--bg-color); 
  height: 100vh; 
  display: flex; 
  flex-direction: column; 
  position: relative;
}

.detail-scroll { flex: 1; }

.detail-card {
  background: var(--card-bg); padding: 30rpx; margin-bottom: 20rpx;
}

.user-row { display: flex; align-items: center; margin-bottom: 20rpx; }
.avatar { width: 80rpx; height: 80rpx; border-radius: 50%; margin-right: 20rpx; background: #eee; }
.info { flex: 1; display: flex; flex-direction: column; }
.nick { font-weight: bold; font-size: var(--text-base); color: var(--text-main); }
.time { font-size: var(--text-xs); color: var(--text-sub); }

.right-actions { display: flex; align-items: center; }

.bounty-badge { 
  color: #FF7043; font-weight: bold; font-size: var(--text-xs); 
  background: #FFF3E0; padding: 4rpx 12rpx; border-radius: 8rpx; 
}
.dark-mode .bounty-badge { background: #3E2723; }

.delete-post-btn {
  font-size: var(--text-xs);
  color: #999;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
}
.dark-mode .delete-post-btn { background: rgba(255,255,255,0.1); }
.delete-post-btn:active { opacity: 0.7; }

.content-body { margin-bottom: 30rpx; }
.d-title { font-size: var(--text-xl); font-weight: 900; margin-bottom: 16rpx; color: var(--text-main); }
.d-text { font-size: var(--text-base); color: var(--text-main); line-height: 1.6; opacity: 0.9; }

/* [修改] 详情页图片样式：横排 Grid 布局 */
.img-list {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.post-img {
  width: calc(50% - 8rpx); /* 每行显示2个，减去间距 */
  height: 280rpx; /* 固定高度确保整齐 */
  border-radius: 16rpx;
  margin-bottom: 0;
  display: block;
  background-color: #f0f0f0;
}

.stat-row { font-size: var(--text-xs); color: var(--text-sub); border-top: 1rpx solid rgba(0,0,0,0.05); padding-top: 20rpx; }
.dark-mode .stat-row { border-top-color: rgba(255,255,255,0.05); }

/* 评论区 */
.comment-section { 
  background: var(--card-bg); 
  padding: 30rpx; 
  min-height: 300rpx; 
}
.section-head { font-weight: bold; margin-bottom: 30rpx; border-left: 8rpx solid #FF7043; padding-left: 16rpx; color: var(--text-main); font-size: var(--text-base); }

.comment-item { display: flex; margin-bottom: 30rpx; }
.c-avatar { width: 70rpx; height: 70rpx; border-radius: 50%; margin-right: 20rpx; background: #eee; }
.c-content { flex: 1; border-bottom: 1rpx solid rgba(0,0,0,0.05); padding-bottom: 20rpx; }
.dark-mode .c-content { border-bottom-color: rgba(255,255,255,0.05); }

.c-head { display: flex; justify-content: space-between; margin-bottom: 8rpx; }
.c-nick { font-size: var(--text-sm); color: var(--text-sub); font-weight: bold; }
.c-floor { font-size: var(--text-xs); color: var(--text-sub); opacity: 0.6; }
.c-text { font-size: var(--text-base); color: var(--text-main); display: block; margin-bottom: 12rpx; }

.c-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.c-time { font-size: var(--text-xs); color: var(--text-sub); opacity: 0.8; }

.delete-text {
  font-size: var(--text-xs);
  color: #999;
  padding: 4rpx 10rpx;
}
.delete-text:active {
  color: #FF5722;
  opacity: 0.7;
}

.empty-comment {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  opacity: 0.6;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  filter: grayscale(1);
}
.empty-text {
  font-size: var(--text-sm);
  color: var(--text-sub);
}

.bottom-bar {
  position: fixed;
  bottom: 0; left: 0; width: 100%;
  background: var(--card-bg); 
  padding: 20rpx 30rpx calc(20rpx + env(safe-area-inset-bottom));
  display: flex; align-items: center; 
  border-top: 1rpx solid rgba(0,0,0,0.05);
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  z-index: 100;
  box-sizing: border-box;
}
.dark-mode .bottom-bar { 
  border-top-color: rgba(255,255,255,0.05); 
  box-shadow: 0 -4rpx 20rpx rgba(255,255,255,0.02);
}

.comment-input {
  flex: 1; background: #f5f5f5; height: 72rpx; border-radius: 36rpx; padding: 0 30rpx; 
  font-size: var(--text-base); margin-right: 20rpx; color: var(--text-main);
}
.dark-mode .comment-input { background: rgba(255,255,255,0.05); }
.ph-color { color: var(--text-sub); opacity: 0.6; }

.send-btn { 
  color: #fff; 
  background: linear-gradient(90deg, #FF7043, #FF5722);
  font-weight: bold; 
  font-size: var(--text-sm); 
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}
.send-btn:active { opacity: 0.9; }