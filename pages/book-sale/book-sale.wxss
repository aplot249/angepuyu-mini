.container {
  min-height: 100vh;
  background-color: #F7F8FA;
  padding-bottom: env(safe-area-inset-bottom);
}

.dark-mode.container {
  background-color: #121212;
}

/* 1. 顶部书籍展示 */
.book-header {
  background: #FFFFFF;
  padding: 40rpx 40rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.02);
}

.dark-mode .book-header {
  background: #1E1E1E;
}

.book-cover {
  width: 280rpx;
  height: 400rpx;
  border-radius: 12rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
  z-index: 2;
  margin-bottom: 30rpx;
}

.book-cover-shadow {
  position: absolute;
  top: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 260rpx;
  height: 380rpx;
  background: rgba(0, 0, 0, 0.2);
  filter: blur(20px);
  z-index: 1;
}

.header-content {
  text-align: center;
  z-index: 2;
}

.book-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.dark-mode .book-title {
  color: #FFF;
}

.book-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
  display: block;
}

.dark-mode .book-subtitle {
  color: #AAA;
}

.tags-row {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.tag {
  font-size: 22rpx;
  color: #FF7043;
  background: #FFF3E0;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.dark-mode .tag {
  background: rgba(255, 112, 67, 0.2);
}

/* 2. 数据统计 */
.stats-section {
  margin: 30rpx;
  background: #FFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

.dark-mode .stats-section {
  background: #1E1E1E;
}

.section-title-center {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
  position: relative;
}

.section-title-center::before,
.section-title-center::after {
  content: '';
  display: inline-block;
  width: 40rpx;
  height: 2rpx;
  background: #EEE;
  vertical-align: middle;
  margin: 0 20rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 36rpx;
  font-weight: 900;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
}

.text-orange {
  color: #FF7043;
}

.text-blue {
  color: #2196F3;
}

.text-green {
  color: #4CAF50;
}

.text-purple {
  color: #9C27B0;
}

/* 3. 通用详情卡片 */
.detail-card {
  margin: 0 30rpx 30rpx;
  background: #FFF;
  border-radius: 24rpx;
  padding: 40rpx;
}

.dark-mode .detail-card {
  background: #1E1E1E;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.dark-mode .card-title {
  color: #FFF;
}

.desc-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.7;
  text-align: justify;
}

.dark-mode .desc-text {
  color: #BBB;
}

.divider {
  height: 2rpx;
  background: #F5F5F5;
  margin: 30rpx 0;
}

.dark-mode .divider {
  background: rgba(255, 255, 255, 0.05);
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
}

.check-icon {
  margin-right: 16rpx;
  font-size: 24rpx;
  margin-top: 4rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #555;
}

.dark-mode .feature-text {
  color: #BBB;
}

/* 作者信息 */
.author-box {
  display: flex;
  align-items: center;
  background: #FAFAFA;
  padding: 20rpx;
  border-radius: 16rpx;
}

.dark-mode .author-box {
  background: rgba(255, 255, 255, 0.05);
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.author-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.author-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.dark-mode .author-name {
  color: #FFF;
}

.author-quote {
  font-size: 24rpx;
  color: #888;
  font-style: italic;
}

/* 图片详情 */
.detail-images {
  padding: 0 30rpx;
  text-align: center;
}

.detail-img {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

/* 底部购买栏 */
.footer-spacer {
  height: 160rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #FFF;
  padding: 20rpx 30rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
}

.dark-mode .bottom-bar {
  background: #1E1E1E;
  border-top: 1rpx solid rgba(255, 255, 255, 0.05);
}

.price-box {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 24rpx;
  color: #FF5252;
  font-weight: bold;
  margin-right: 4rpx;
}

.price {
  font-size: 44rpx;
  color: #FF5252;
  font-weight: 900;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-consult {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  padding: 0 20rpx;
  font-size: 20rpx;
  color: #666;
  line-height: 1.2;
}

.btn-consult::after {
  border: none;
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.btn-buy {
  background: linear-gradient(135deg, #FF7043, #FF5722);
  color: #FFF;
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 87, 34, 0.3);
}

.btn-buy:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* --- [新增] 订单弹窗样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 998;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.order-modal {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #FFF;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 40rpx 40rpx calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  z-index: 999;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.dark-mode .order-modal {
  background: #1E1E1E;
}

.order-modal.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.dark-mode .modal-title {
  color: #FFF;
}

.close-icon {
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
}

.form-content {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.dark-mode .label {
  color: #AAA;
}

/* [修改] 优化输入框样式 */
.input {
  width: 100%;
  background: #F5F5F5;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  /* 垂直居中 */
  padding: 0 24rpx;
  /* 仅保留左右padding */
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  background: #F5F5F5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  height: 140rpx;
}

.dark-mode .input,
.dark-mode .textarea {
  background: rgba(255, 255, 255, 0.08);
  color: #FFF;
}

.btn-confirm-pay {
  background: #07C160;
  color: #FFF;
  /* 微信支付绿 */
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-confirm-pay:active {
  opacity: 0.9;
}

.pay-amount {
  font-size: 24rpx;
  margin-left: 10rpx;
  opacity: 0.9;
}