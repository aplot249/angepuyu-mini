.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
}

/* 编辑区 */
.editor-box {
  background: var(--card-bg);
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title-input {
  font-size: var(--text-lg);
  font-weight: bold;
  height: 80rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  margin-bottom: 24rpx;
  color: var(--text-main);
}
.dark-mode .title-input { border-bottom-color: rgba(255,255,255,0.05); }

.content-input {
  width: 100%;
  height: 300rpx;
  font-size: var(--text-base);
  line-height: 1.6;
  color: var(--text-main);
}

.ph-color {
  color: var(--text-sub);
  opacity: 0.6;
}

/* 图片上传 */
.img-uploader {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

/* 预览图容器 */
.preview-wrap {
  position: relative;
  width: 180rpx;
  height: 180rpx;
}

.preview-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.del-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.upload-btn {
  width: 180rpx;
  height: 180rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: var(--text-sm);
  font-weight: 500;
}
.dark-mode .upload-btn { background: rgba(255,255,255,0.05); }

/* 设置列表 */
.setting-list {
  background: var(--card-bg);
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.dark-mode .setting-item { border-bottom-color: rgba(255,255,255,0.05); }
.setting-item:last-child {
  border-bottom: none;
}

.label-row {
  display: flex;
  flex-direction: column;
}

.label-main {
  font-size: var(--text-base);
  color: var(--text-main);
}

.sub-label {
  font-size: var(--text-xs);
  color: var(--text-sub);
  margin-top: 6rpx;
}

.value {
  color: var(--text-sub);
  font-size: var(--text-sm);
}

/* 悬赏选择器 */
.bounty-selector {
  display: flex;
  padding-bottom: 30rpx;
  gap: 24rpx;
}

.bounty-opt {
  padding: 12rpx 36rpx;
  background: #F5F5F5;
  border-radius: 30rpx;
  font-size: var(--text-sm);
  color: var(--text-sub);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}
.dark-mode .bounty-opt { background: rgba(255,255,255,0.05); }

.bounty-opt.active {
  background: #FFF3E0;
  color: #FF7043;
  border-color: #FF7043;
  font-weight: bold;
}
.dark-mode .bounty-opt.active { background: #3E2723; }

/* 底部发布按钮 */
.footer-btn {
  margin-top: auto;
  padding: 30rpx;
  background: var(--card-bg);
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.03);
}

.btn-submit {
  background: linear-gradient(90deg, #FF7043, #FF5722);
  color: #fff;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-lg);
  font-weight: bold;
  letter-spacing: 2rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 87, 34, 0.3);
}

.btn-submit:active {
  opacity: 0.9;
  transform: scale(0.99);
}