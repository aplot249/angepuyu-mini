.share-page {
  padding: 30rpx;
  background-color: #f3f4f6; /* 浅灰背景衬托海报 */
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dark-mode.share-page {
  background-color: #111827;
}

/* 隐藏 Canvas 组件，防止干扰布局 */
.widget {
  position: absolute;
  top: -9999px;
  left: 0;
  z-index: -1;
}

/* 海报主体 */
.poster-card {
  width: 100%;
  max-width: 650rpx;
  background: white;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
}

.dark-mode .poster-card {
  background: #1F2937;
}

/* 顶部视觉图 */
.poster-header {
  height: 360rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
}

.header-bg {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
}

.overlay {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(to bottom, rgba(45, 212, 191, 0.8), rgba(13, 148, 136, 0.9)); /* Teal Gradient */
  mix-blend-mode: multiply;
}

.app-branding { position: relative; z-index: 10; }
.logo-box {
  font-size: 80rpx;
  background: white;
  width: 140rpx; height: 140rpx;
  border-radius: 40rpx;
  display: flex; align-items: center; justify-content: center;
  margin: 0 auto 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.2);
}
.app-name { font-size: 40rpx; font-weight: 900; letter-spacing: 2rpx; margin-bottom: 10rpx; text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2); }
.app-slogan { font-size: 24rpx; opacity: 0.9; letter-spacing: 1rpx; font-weight: 300; }

/* 简介文字 */
.intro-section { padding: 40rpx 40rpx 20rpx; text-align: center; }
.highlight-text { 
  display: block; 
  font-size: 32rpx; 
  font-weight: 800; 
  color: var(--primary); 
  margin-bottom: 16rpx; 
}
.sub-text { 
  font-size: 26rpx; 
  color: #6B7280; 
  line-height: 1.6; 
}
.dark-mode .sub-text { color: #9CA3AF; }

/* 功能网格 */
.features-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.feature-item {
  background: #F9FAFB;
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
}
.dark-mode .feature-item { background: #374151; }

.icon-circle {
  width: 80rpx; height: 80rpx;
  border-radius: 50%;
  margin: 0 auto 16rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 36rpx;
}
.icon-circle.teal { background: #CCFBF1; color: #0D9488; }
.icon-circle.orange { background: #FFEDD5; color: #EA580C; }
.icon-circle.blue { background: #DBEAFE; color: #2563EB; }
.icon-circle.purple { background: #F3E8FF; color: #9333EA; }

.dark-mode .icon-circle.teal { background: rgba(20, 184, 166, 0.2); }
.dark-mode .icon-circle.orange { background: rgba(249, 115, 22, 0.2); }
.dark-mode .icon-circle.blue { background: rgba(59, 130, 246, 0.2); }
.dark-mode .icon-circle.purple { background: rgba(168, 85, 247, 0.2); }

.feat-title { font-size: 28rpx; font-weight: bold; margin-bottom: 8rpx; color: var(--text-main); }
.feat-desc { font-size: 22rpx; color: #9CA3AF; line-height: 1.4; }

/* 底部二维码 */
.poster-footer {
  padding: 30rpx 40rpx 50rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx dashed #E5E7EB;
}
.dark-mode .poster-footer { border-top-color: #374151; }

.qr-placeholder {
  width: 140rpx; height: 140rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-right: 30rpx;
}
.qr-img { width: 100%; height: 100%; }

.scan-tip { flex: 1; display: flex; flex-direction: column; }
.tip-bold { font-size: 30rpx; font-weight: bold; color: var(--text-main); margin-bottom: 8rpx; }
.tip-small { font-size: 22rpx; color: var(--text-sub); }

/* 底部按钮 */
.action-bar {
  width: 100%;
  max-width: 650rpx;
  display: flex;
  gap: 30rpx;
  padding-bottom: 40rpx;
}

.btn {
  flex: 1;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  height: 90rpx;
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
  border: none;
}
.btn::after { border: none; }

.share-friend {
  background: white;
  color: var(--primary);
  border: 2rpx solid var(--primary);
}
.save-img {
  background: var(--primary);
  color: white;
}