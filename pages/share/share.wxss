/* pages/share/share.wxss */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 隐藏 Canvas，仅用于后台生成图片 */
#posterCanvas {
  position: fixed;
  left: 9999px;
  top: 0;
  width: 375px;
  height: 660px;
}

/* --- 海报卡片样式 (屏幕预览) --- */
.poster-card {
  width: 100%;
  max-width: 650rpx;
  background: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.dark-mode .poster-card {
  background: #2D2420;
}

/* 头部区域 */
.poster-header {
  position: relative;
  height: 360rpx;
  width: 100%;
}

.header-bg {
  width: 100%;
  height: 100%;
  display: block;
}

.overlay {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.6));
}

.app-branding {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  z-index: 2;
}

.logo-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  border: 4rpx solid #fff;
  background-color: #fff;
}

.app-name {
  font-size: 40rpx;
  font-weight: 900;
  color: #fff;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.app-slogan {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 2rpx;
}

/* 简介文本 */
.intro-section {
  padding: 40rpx 40rpx 10rpx;
  text-align: center;
}

.highlight-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #009688; /* Teal color */
  margin-bottom: 12rpx;
}

.sub-text {
  font-size: 26rpx;
  color: var(--text-sub);
  line-height: 1.6;
}

/* 功能网格 */
.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  padding: 40rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  background: #F9FAFB;
  padding: 24rpx;
  border-radius: 16rpx;
}
.dark-mode .feature-item { background: rgba(255,255,255,0.05); }

.icon-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 16rpx;
}

.icon-circle.teal { background: #E0F2F1; color: #009688; }
.icon-circle.orange { background: #FFF3E0; color: #FF9800; }
.icon-circle.blue { background: #E3F2FD; color: #2196F3; }
.icon-circle.purple { background: #F3E5F5; color: #9C27B0; }

.dark-mode .icon-circle { background: rgba(255,255,255,0.1); }

.feat-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 6rpx;
}

.feat-desc {
  font-size: 20rpx;
  color: var(--text-sub);
  line-height: 1.4;
}

/* 底部二维码 */
.poster-footer {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: #FAFAFA;
  border-top: 1rpx dashed #EEEEEE;
}
.dark-mode .poster-footer { 
  background: rgba(0,0,0,0.2); 
  border-top-color: rgba(255,255,255,0.1);
}

.qr-placeholder {
  /* [修改] 再次放大二维码区域 140rpx -> 180rpx */
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.qr-img {
  width: 100%;
  height: 100%;
}

.scan-tip {
  display: flex;
  flex-direction: column;
}

.tip-bold {
  font-size: 30rpx;
  font-weight: 900;
  color: var(--text-main);
  margin-bottom: 6rpx;
}

.tip-small {
  font-size: 22rpx;
  color: var(--text-sub);
}

/* --- 底部操作按钮 --- */
.action-bar {
  width: 100%;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  margin-top: auto;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.share-friend {
  background: #f5f5f5; /* Lighter gray for secondary */
  color: #333;
}

.save-img {
  background: linear-gradient(90deg, #FF7043, #FF5722);
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(255, 87, 34, 0.3);
}

.btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}