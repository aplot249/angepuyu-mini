.share-page {
  padding: 30rpx;
  background-color: #FFF3E0; /* 暖色背景 */
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dark-mode.share-page {
  background-color: #2D2420;
}

/* 原生 Canvas 2D 隱藏樣式 */
#posterCanvas {
  position: fixed;
  top: -9999px;
  left: 0;
  width: 375px;
  height: 667px;
  z-index: -999;
}

/* 海报主体 */
.poster-card {
  width: 100%;
  max-width: 650rpx;
  background: white;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(141, 110, 99, 0.15);
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
}

.dark-mode .poster-card {
  background: #3E2723;
}

/* 顶部视觉图 */
.poster-header {
  height: 360rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
}

.header-bg {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
}

.overlay {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  /* 暖色叠加层：蜜桃色 */
  background: linear-gradient(to bottom, rgba(254, 201, 157, 0.8), rgba(255, 138, 101, 0.85)); 
  mix-blend-mode: multiply;
}

.app-branding { position: relative; z-index: 10; display: flex; flex-direction: column; align-items: center; }
.logo-box {
  width: 140rpx; height: 140rpx;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
  background-color: #fff;
}
.app-name { font-size: 40rpx; font-weight: 900; letter-spacing: 2rpx; margin-bottom: 10rpx; text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1); color: white; }
.app-slogan { font-size: 24rpx; opacity: 0.95; letter-spacing: 1rpx; font-weight: 400; color: #FFF3E0; }

/* 简介文字 */
.intro-section { padding: 40rpx 40rpx 20rpx; text-align: center; }
.highlight-text { 
  display: block; 
  font-size: 32rpx; 
  font-weight: 800; 
  color: #FF7043; /* 深珊瑚色 */
  margin-bottom: 16rpx; 
}
.sub-text { 
  font-size: 26rpx; 
  color: #8D6E63; /* 浅棕 */
  line-height: 1.6; 
}
.dark-mode .sub-text { color: #BCAAA4; }

/* 功能网格 */
.features-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.feature-item {
  background: #FFF8F3; /* 极淡蜜桃 */
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
}
.dark-mode .feature-item { background: #4E342E; }

.icon-circle {
  width: 80rpx; height: 80rpx;
  border-radius: 50%;
  margin: 0 auto 16rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 36rpx;
}
/* 改为暖色系图标背景 */
.icon-circle.teal { background: #E0F2F1; color: #00695C; } /* 保持一点冷色对比 */
.icon-circle.orange { background: #FBE9E7; color: #D84315; }
.icon-circle.blue { background: #FFF3E0; color: #EF6C00; } /* 改为暖橙 */
.icon-circle.purple { background: #F3E5F5; color: #8E24AA; }

.feat-title { font-size: 28rpx; font-weight: bold; margin-bottom: 8rpx; color: var(--text-main); }
.feat-desc { font-size: 22rpx; color: var(--text-sub); line-height: 1.4; }

/* 底部二维码 */
.poster-footer {
  padding: 30rpx 40rpx 50rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx dashed #D7CCC8;
}
.dark-mode .poster-footer { border-top-color: #5D4037; }

.qr-placeholder {
  width: 140rpx; height: 140rpx;
  background: #FFF8F3;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-right: 30rpx;
}
.qr-img { width: 100%; height: 100%; }

.scan-tip { flex: 1; display: flex; flex-direction: column; }
.tip-bold { font-size: 30rpx; font-weight: bold; color: var(--text-main); margin-bottom: 8rpx; }
.tip-small { font-size: 22rpx; color: var(--text-sub); }

/* 底部按钮 */
.action-bar {
  width: 100%;
  max-width: 650rpx;
  display: flex;
  gap: 30rpx;
  padding-bottom: 40rpx;
}

.btn {
  flex: 1;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  height: 90rpx;
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(141, 110, 99, 0.1);
  border: none;
}
.btn::after { border: none; }

.share-friend {
  background: white;
  color: #FF7043;
  border: 2rpx solid #FF7043;
}
.save-img {
  background: linear-gradient(135deg, #FEC99D, #FF7043);
  color: #5D4037;
}