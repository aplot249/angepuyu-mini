.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* --- 顶部统计 --- */
.stats-header {
  position: relative;
  height: 220rpx;
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(141, 110, 99, 0.1);
}

.stats-bg {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(135deg, #FFAB91 0%, #FF7043 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.dark-mode .stats-bg { background: linear-gradient(135deg, #4E342E 0%, #3E2723 100%); }

.stats-content {
  position: relative; z-index: 10;
  display: flex; align-items: center; justify-content: center;
  height: 100%; padding-bottom: 20rpx;
}

.stats-column {
  flex: 1; display: flex; flex-direction: column; align-items: center;
}

.stats-num { font-size: 60rpx; font-weight: 900; color: #fff; text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2); }
.stats-label { font-size: 24rpx; color: rgba(255,255,255,0.9); font-weight: bold; margin-top: 6rpx; }

.stats-divider {
  width: 2rpx; height: 60rpx; background: rgba(255,255,255,0.4);
}

/* --- 列表区域 --- */
.mistake-list {
  flex: 1;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.mistake-card {
  background: var(--card-bg);
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(141, 110, 99, 0.08);
  display: flex;
  overflow: hidden;
  border: 1rpx solid rgba(254, 201, 157, 0.15);
}

.severity-bar { width: 10rpx; height: 100%; }
.severity-bar.normal { background: #FFCCBC; } /* 普通错误 */
.severity-bar.high { background: #D84315; } /* 高频错误 */

.card-content {
  flex: 1; padding: 30rpx;
}

.card-top { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20rpx; }
.word-info { display: flex; flex-direction: column; }
.sw-word { font-size: 40rpx; font-weight: 900; color: var(--text-main); margin-bottom: 12rpx; }

.tag-row { display: flex; align-items: center; }
.tag-error {
  font-size: 20rpx; color: #D84315; background: #FBE9E7;
  padding: 4rpx 10rpx; border-radius: 8rpx; margin-right: 12rpx; font-weight: bold;
}
.tag-time { font-size: 20rpx; color: var(--text-sub); }

.play-btn-mini {
  width: 60rpx; height: 60rpx; background: #FFF3E0; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 28rpx; color: #FF7043;
}

.card-middle {
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: rgba(0,0,0,0.02);
  border-radius: 12rpx;
}
.cn-hint { font-size: 28rpx; color: var(--text-sub); font-weight: 500; }

.card-bottom { display: flex; gap: 24rpx; }

.btn-master, .btn-quiz {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 26rpx; font-weight: bold;
}

.btn-master {
  background: #f5f5f5; color: var(--text-sub); border: 1rpx solid #eee;
}
.dark-mode .btn-master { background: #333; border-color: #444; }

.btn-quiz {
  background: linear-gradient(135deg, #FF8A65, #FF7043);
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(255, 112, 67, 0.3);
}
.btn-quiz:active { transform: scale(0.98); }

/* --- 空状态 --- */
.empty-state {
  margin-top: 100rpx;
  display: flex; flex-direction: column; align-items: center;
}
.empty-icon {
  font-size: 100rpx; margin-bottom: 30rpx;
  background: #FFF3E0; width: 180rpx; height: 180rpx;
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
}
.empty-text { font-size: 32rpx; font-weight: bold; color: var(--text-main); margin-bottom: 10rpx; }
.empty-sub { font-size: 24rpx; color: var(--text-sub); margin-bottom: 50rpx; }

.btn-go-quiz {
  padding: 20rpx 60rpx; background: #FF7043; color: white;
  border-radius: 40rpx; font-weight: bold; box-shadow: 0 6rpx 16rpx rgba(255, 112, 67, 0.3);
}