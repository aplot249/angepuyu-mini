/* --- 移除重复的字体变量定义，直接继承 app.wxss --- */

.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* --- 顶部统计 --- */
.stats-header {
  position: relative;
  height: 220rpx;
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(141, 110, 99, 0.1);
  flex-shrink: 0;
}

.stats-bg {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(180deg, #FFAB91 0%, #FF7043 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.dark-mode .stats-bg { background: linear-gradient(135deg, #4E342E 0%, #3E2723 100%); }

.stats-content {
  position: relative; z-index: 10;
  display: flex; align-items: center; justify-content: center;
  height: 100%; padding-bottom: 20rpx;
}

.stats-column {
  flex: 1; display: flex; flex-direction: column; align-items: center;
}

/* 使用全局变量控制字体大小 */
.stats-num { 
  font-size: var(--text-xxl); 
  font-weight: 900; color: #fff; 
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2); 
}
.stats-label { 
  font-size: var(--text-sm); 
  color: rgba(255,255,255,0.9); 
  font-weight: bold; margin-top: 6rpx; 
}

.stats-divider {
  width: 2rpx; height: 60rpx; background: rgba(255,255,255,0.4);
}

/* --- 列表区域 --- */
.mistake-list {
  flex: 1;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.mistake-card {
  background: var(--card-bg);
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(141, 110, 99, 0.08);
  display: flex;
  overflow: hidden;
  border: 1rpx solid rgba(254, 201, 157, 0.15);
  position: relative;
}

.mistake-card:active {
  background-color: rgba(0,0,0,0.02);
  transform: scale(0.99);
  transition: transform 0.1s;
}

.card-content {
  flex: 1; padding: 30rpx;
}

.card-top { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16rpx; }
.word-info { display: flex; flex-direction: column; }

/* 单词字体大小跟随设置 */
.sw-word { 
  font-size: var(--text-xl); 
  font-weight: 900; color: var(--text-main); margin-bottom: 12rpx; 
}

.tag-row { display: flex; align-items: center; }
.tag-error {
  font-size: var(--text-xs); 
  color: #D84315; background: #FBE9E7;
  padding: 4rpx 10rpx; border-radius: 8rpx; margin-right: 12rpx; font-weight: bold;
}
.tag-time { 
  font-size: var(--text-xs); 
  color: var(--text-sub); 
}

.play-icon-mini {
  font-size: 32rpx; opacity: 0.5; color: #FF7043;
}

.card-middle {
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: rgba(0,0,0,0.02);
  border-radius: 12rpx;
}
/* 释义字体大小跟随设置 */
.cn-hint { 
  font-size: var(--text-base); 
  color: var(--text-sub); font-weight: 500; 
  line-height: 1.5;
}

.card-bottom { display: flex; justify-content: flex-end; }

.btn-master {
  padding: 12rpx 30rpx;
  border-radius: 35rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: var(--text-sm); 
  font-weight: bold;
  background: #E8F5E9; color: #2E7D32;
  border: 1rpx solid #C8E6C9;
}
.dark-mode .btn-master { background: #1B5E20; color: #E8F5E9; border-color: #2E7D32; }

/* --- 加载状态 --- */
.loading-more {
  text-align: center;
  padding: 20rpx;
  font-size: var(--text-sm);
  color: var(--text-sub);
}

/* --- 空状态 --- */
.empty-state {
  margin-top: 100rpx;
  display: flex; flex-direction: column; align-items: center;
}
.empty-icon {
  font-size: 100rpx; margin-bottom: 30rpx;
  background: #FFF3E0; width: 180rpx; height: 180rpx;
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
}
.empty-text { 
  font-size: var(--text-lg); 
  font-weight: bold; color: var(--text-main); margin-bottom: 10rpx; 
}
.empty-sub { 
  font-size: var(--text-sm); 
  color: var(--text-sub); margin-bottom: 50rpx; 
}