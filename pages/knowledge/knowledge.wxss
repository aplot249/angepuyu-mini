.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
  padding: 0;
  overflow: hidden;
}

/* --- 顶部导航栏 --- */
.nav-header {
  height: 90rpx;
  background: var(--card-bg);
  box-shadow: 0 4rpx 10rpx rgba(141, 110, 99, 0.05);
  z-index: 10;
  position: relative;
}

.tab-scroll {
  height: 100%;
  width: 100%;
  white-space: nowrap;
}

.tab-container {
  display: flex;
  padding: 0 20rpx;
  height: 100%;
  align-items: center;
}

.tab-item {
  position: relative;
  padding: 0 30rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.tab-text {
  font-size: var(--text-base);
  color: var(--text-sub);
  transition: all 0.3s;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #FF7043; /* 选中色：深橙 */
  font-weight: 900;
  transform: scale(1.05);
}

.tab-line {
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #FEC99D, #FF7043);
  border-radius: 6rpx;
}

/* --- 内容区域 --- */
.content-swiper {
  flex: 1;
  background-color: var(--bg-color);
}

.list-scroll {
  height: 100%;
}

.article-list {
  padding: 30rpx;
}

/* --- 文章卡片 --- */
.article-card {
  display: flex;
  background: var(--card-bg);
  padding: 30rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(141, 110, 99, 0.06);
  border: 1rpx solid rgba(254, 201, 157, 0.15);
  transition: opacity 0.2s;
}
.article-card:active { opacity: 0.8; }

.info-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 24rpx;
}

.title {
  font-size: var(--text-lg);
  font-weight: bold;
  color: var(--text-main);
  line-height: 1.4;
  margin-bottom: 12rpx;
  /* 最多显示2行 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.summary {
  font-size: var(--text-xs);
  color: var(--text-sub);
  line-height: 1.5;
  margin-bottom: 20rpx;
  /* 最多显示2行 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  opacity: 0.8;
}

.meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.author-box {
  display: flex;
  align-items: center;
}

.author-avatar {
  width: 36rpx; height: 36rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  background: #eee;
}

.author-name {
  font-size: var(--text-xs);
  color: var(--text-main);
  font-weight: 500;
}

.date {
  font-size: 20rpx;
  color: var(--text-sub);
}

.cover-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  background-color: #FFF3E0;
  flex-shrink: 0;
}

/* --- 加载状态 --- */
.loading-state {
  text-align: center;
  padding: 20rpx;
  font-size: var(--text-xs);
  color: var(--text-sub);
  opacity: 0.6;
}