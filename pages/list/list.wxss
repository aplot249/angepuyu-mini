/* --- 页面基础布局 --- */
.list-page { padding: 0; height: 100vh; display: flex; flex-direction: column; overflow: hidden; background-color: var(--bg-color); }

.fixed-header {
  background: var(--bg-color);
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(141, 110, 99, 0.05);
  z-index: 20;
}

.main-search {
  background: var(--card-bg);
  height: 80rpx;
  border-radius: 40rpx;
  padding: 0 40rpx;
  font-size: var(--text-sm);
  margin-bottom: 20rpx;
  color: var(--text-main);
  border: 2rpx solid rgba(254, 201, 157, 0.3); /* 暖色边框 */
}
.ph-color { color: var(--text-sub); opacity: 0.6; }

.segment-tab {
  display: flex;
  background: #EFEBE9;
  border-radius: 20rpx;
  padding: 8rpx;
}
.segment-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: var(--text-sm);
  color: var(--text-sub);
  border-radius: 16rpx;
  font-weight: bold;
  transition: all 0.3s;
}
.segment-item.active {
  background: var(--card-bg);
  color: var(--secondary); /* 暖色激活 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.content-swiper { flex: 1; height: 0; }
.scroll-area { height: 100%; padding: 20rpx 30rpx; box-sizing: border-box; }

/* --- 通用卡片骨架 --- */
.item-card {
  background: var(--card-bg);
  border-radius: 30rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(141, 110, 99, 0.08);
  border: 1rpx solid rgba(254, 201, 157, 0.2);
  display: flex;
  flex-direction: column;
}

/* --- 1. 单词卡片样式 (Word Layout) --- */
.word-layout .card-main {
  display: flex;
  margin-bottom: 20rpx;
}

/* [修改] 图片在右侧时的样式 */
.word-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
  margin-left: 24rpx; /* 改为左边距 */
  background-color: #FFF3E0;
  border: 2rpx solid rgba(254, 201, 157, 0.3);
  flex-shrink: 0;
}

/* 核心信息区 */
.info-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* 自动撑满剩余空间，当图片不存在时会占满整行 */
}

.row-flex {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.sw-text {
  font-size: var(--text-xl); /* 大字体 */
  font-weight: 900;
  color: var(--text-main);
  line-height: 1.2;
}

/* 播放按钮 */
.play-btn {
  width: 70rpx;
  height: 70rpx;
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 36rpx;
  color: #FF7043; /* 珊瑚色 */
  box-shadow: 0 4rpx 10rpx rgba(255, 112, 67, 0.2);
  flex-shrink: 0;
  margin-left: 10rpx;
}
.play-btn:active { transform: scale(0.9); }

.homonym-box {
  display: flex; align-items: center;
  margin: 10rpx 0;
  background: #FFF8F3;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}
.tag {
  /* font-size: 20rpx; */
  font-size: var(--text-main);
  background: #FFCCBC;
  color: #BF360C;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  font-weight: bold;
}
.hm-text {
  font-size: var(--text-base); /* 较大字体 */
  color: #5D4037;
  font-weight: bold;
}

.trans-box { display: flex; flex-direction: column; }
.cn-text {
  font-size: var(--text-lg); /* 大字体 */
  font-weight: 900;
  color: var(--secondary); /* 暖色强调 */
  margin-bottom: 4rpx;
}
.en-text {
  font-size: var(--text-sm);
  color: var(--text-sub);
  font-style: italic;
}

/* --- 2. 短语卡片样式 (Phrase Layout) --- */
.phrase-layout {
  /* border-left: 8rpx solid var(--secondary); 左侧彩色条装饰 */
}

.phrase-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.sw-sentence {
  font-size: var(--text-xl); /* 最大字体 */
  font-weight: 900;
  color: var(--text-main);
  line-height: 1.4;
  width: 85%; /* 留出空间给播放按钮 */
  word-wrap: break-word;
}

.play-btn.large {
  width: 80rpx; height: 80rpx;
  font-size: 40rpx;
}

.homonym-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
  background: #FFF8F3;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
}
.hm-sentence {
  font-size: var(--text-base);
  color: #5D4037;
  font-weight: bold;
  margin-left: 14rpx;
}

.meaning-col {
  display: flex; flex-direction: column;
  padding-bottom: 20rpx;
  border-bottom: 2rpx dashed rgba(141, 110, 99, 0.1);
  margin-bottom: 20rpx;
}
.cn-sentence {
  font-size: var(--text-lg); /* 大字体 */
  font-weight: bold;
  color: var(--secondary);
  margin-bottom: 8rpx;
}
.en-sentence {
  font-size: var(--text-sm);
  color: var(--text-sub);
}

/* --- 底部操作栏 (Actions) --- */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end; /* 底部对齐 */
  margin-top: 10rpx;
}

.action-fav {
  display: flex;
  align-items: center;
  background: #FBE9E7;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  transition: all 0.2s;
}
.action-fav:active { opacity: 0.8; transform: scale(0.98); }

.fav-icon { font-size: 36rpx; margin-right: 10rpx; }
.fav-icon.active { transform: scale(1.1); }

.fav-label {
  font-size: var(--text-sm);
  font-weight: bold;
  color: #D84315;
}
.fav-label.active { color: #D84315; }

.action-fix {
  padding: 10rpx;
}
.action-fix text {
  font-size: 22rpx; /* 小字体 */
  color: var(--text-sub); /* 弱化颜色 */
  text-decoration: underline;
}

.loading-tip { text-align: center; padding: 30rpx; color: var(--text-sub); font-size: var(--text-xs); }