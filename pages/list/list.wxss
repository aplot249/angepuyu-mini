.list-page { padding: 0; height: 100vh; display: flex; flex-direction: column; overflow: hidden; }

.fixed-header {
  background: var(--bg-color);
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
  z-index: 20;
}

.main-search {
  background: var(--card-bg);
  height: 80rpx;
  border-radius: 40rpx;
  padding: 0 40rpx;
  font-size: var(--text-sm);
  margin-bottom: 20rpx;
  color: var(--text-main);
}

.segment-tab {
  display: flex;
  background: #f3f4f6; /* 浅灰底 */
  border-radius: 20rpx;
  padding: 6rpx;
}
.segment-item {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  font-size: var(--text-sm);
  color: var(--text-sub);
  border-radius: 16rpx;
  font-weight: bold;
}
.segment-item.active {
  background: var(--card-bg);
  color: var(--primary);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}
/* 短语Tab激活时用橙色 */
.segment-item.active:nth-child(2) { color: var(--secondary); }

.content-swiper { flex: 1; height: 0; /* 必须设置以便flex生效 */ }
.scroll-area { height: 100%; padding: 20rpx 30rpx; box-sizing: border-box; }

.detail-card {
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(0,0,0,0.02);
}
.phrase-style { border-left: 8rpx solid var(--secondary); }

.card-body { display: flex; justify-content: space-between; align-items: flex-start; }
.info-col { flex: 1; padding-right: 20rpx; }

.sw-title { font-size: var(--text-xl); font-weight: 900; color: var(--text-main); display: block; margin-bottom: 6rpx; letter-spacing: -0.5px; }
.en-sub { font-size: var(--text-xs); color: var(--text-sub); font-weight: bold; text-transform: uppercase; display: block; margin-bottom: 16rpx; }

.homonym-row { display: flex; align-items: center; margin-bottom: 16rpx; }
.badge { background: #f3f4f6; color: #9ca3af; font-size: 20rpx; padding: 2rpx 8rpx; border-radius: 6rpx; margin-right: 10rpx; }
.homonym-text { font-size: var(--text-sm); color: var(--text-sub); font-family: sans-serif; }

.cn-main { font-size: var(--text-lg); font-weight: bold; color: var(--primary); }
.text-primary { color: var(--primary); }

.word-img { width: 140rpx; height: 140rpx; border-radius: 20rpx; background: #f3f4f6; }

.card-footer {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.actions { display: flex; align-items: center; gap: 20rpx; }
.btn-pill {
  background: rgba(45, 212, 191, 0.1);
  color: var(--primary);
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  font-size: var(--text-xs);
  font-weight: bold;
}
.btn-pill.orange { background: rgba(251, 146, 60, 0.1); color: var(--secondary); }

.icon-btn { font-size: 40rpx; padding: 10rpx; transition: transform 0.2s; }
.icon-btn:active { transform: scale(0.8); }

.feedback-btn { font-size: var(--text-xs); color: var(--text-sub); text-decoration: underline; }

.loading-tip { text-align: center; padding: 30rpx; color: var(--text-sub); font-size: var(--text-xs); }