.container {
  height: 100vh;
  background-color: var(--bg-color);
  display: flex; flex-direction: column;
  overflow: hidden; /* 防止溢出显示白色背景 */
}

/* 顶部 */
.header-section {
  background: var(--card-bg);
  /* [修改] 移除 padding-right，只保留顶部内边距，左右由子元素 margin 控制 */
  padding: 20rpx 0 0;
  box-shadow: 0 4rpx 10rpx rgba(141, 110, 99, 0.05);
  z-index: 10;
  flex-shrink: 0;
}

.search-bar {
  background: #F5F5F5;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  display: flex; align-items: center;
  /* [修改] 增加左右 Margin */
  margin: 0 30rpx 20rpx;
}
.dark-mode .search-bar { background: rgba(255,255,255,0.05); }

.search-icon { margin-right: 10rpx; color: var(--text-sub); }
.search-input { font-size: var(--text-sm); width: 100%; color: var(--text-main); }
.ph-style { color: var(--text-sub); opacity: 0.7; }

/* [新增] Tab 滚动容器样式 */
.tab-scroll {
  width: 100%;
  white-space: nowrap; /* 必须：防止换行 */
  height: 88rpx;
}

.tab-row { 
  display: flex; 
  align-items: center;
  padding-left: 30rpx; /* 左侧留白 */
  height: 100%;
}

.tab-item {
  margin-right: 40rpx; 
  /* 移除上下 padding，高度由 flex 容器控制 */
  height: 100%; 
  display: flex; 
  align-items: center;
  justify-content: center;
  font-size: var(--text-base); color: var(--text-sub);
  position: relative; font-weight: 500;
  /* [关键] 防止 Tab 被挤压 */
  flex-shrink: 0;
}
.tab-item.active { color: #FF7043; font-weight: 900; font-size: var(--text-lg); }
.tab-line {
  position: absolute; bottom: 10rpx; left: 50%; transform: translateX(-50%);
  width: 40rpx; height: 6rpx; background: #FF7043; border-radius: 4rpx;
}

/* 内容区域 Swiper */
.content-swiper {
  flex: 1;
  background-color: var(--bg-color);
  height: 0; /* 配合 flex: 1 */
}

/* 滚动列表 */
.post-list-scroll {
  height: 100%;
}

.post-list-container {
  padding: 20rpx;
  box-sizing: border-box;
}

.post-card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 30rpx; margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(141, 110, 99, 0.08);
  position: relative;
  overflow: hidden; 
}

/* 置顶标签样式 */
.top-stick-tag {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #FF5252, #FF1744);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-bottom-left-radius: 16rpx;
  border-top-right-radius: 24rpx; 
  font-weight: bold;
  z-index: 5;
  box-shadow: -2rpx 2rpx 6rpx rgba(255, 82, 82, 0.2);
}

.card-header { display: flex; align-items: center; margin-bottom: 20rpx; }
.avatar { width: 80rpx; height: 80rpx; border-radius: 50%; margin-right: 20rpx; background: #eee; }
.user-meta { flex: 1; display: flex; flex-direction: column; }
.nickname { font-size: var(--text-base); font-weight: bold; color: var(--text-main); }
.time { font-size: var(--text-xs); color: var(--text-sub); margin-top: 4rpx; }
.bounty-tag {
  background: #FFF3E0; color: #FF7043; font-size: var(--text-xs); 
  padding: 4rpx 16rpx; border-radius: 20rpx; font-weight: bold;
  border: 1rpx solid #FFCCBC;
}
.dark-mode .bounty-tag { background: #3E2723; border-color: #BF360C; }

.card-body { margin-bottom: 20rpx; }
.post-title { font-size: var(--text-lg); font-weight: 900; color: var(--text-main); margin-bottom: 10rpx; }

/* 帖子内容样式 */
.post-content { 
  font-size: var(--text-base); 
  color: var(--text-main); 
  line-height: 1.6; 
  margin-bottom: 16rpx; 
  opacity: 0.9;
  
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.img-grid { display: flex; flex-wrap: wrap; gap: 10rpx; }
.grid-img { width: 200rpx; height: 200rpx; border-radius: 12rpx; background: #f0f0f0; }

.card-footer { display: flex; justify-content: space-between; align-items: center; }
.topic-tag { font-size: var(--text-xs); color: #1E88E5; background: #E3F2FD; padding: 4rpx 12rpx; border-radius: 8rpx; }
.dark-mode .topic-tag { background: rgba(30, 136, 229, 0.2); }

.action-row { display: flex; gap: 40rpx; }
.action-btn { font-size: var(--text-sm); color: var(--text-sub); display: flex; align-items: center; }

/* 悬浮按钮 */
.fab-btn {
  position: fixed; bottom: 60rpx; right: 40rpx;
  width: 110rpx; height: 110rpx;
  background: linear-gradient(135deg, #FF7043, #D84315);
  border-radius: 50%;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(216, 67, 21, 0.4);
  color: white; z-index: 100;
}
.plus-icon { font-size: 40rpx; font-weight: bold; line-height: 1; }
.fab-text { font-size: 20rpx; font-weight: bold; margin-top: 4rpx; }

.loading-tips { text-align: center; color: var(--text-sub); font-size: var(--text-xs); padding: 20rpx; opacity: 0.7; }