/* --- 自定义返回按钮 --- */
.custom-back-btn {
  position: fixed;
  left: 20rpx;
  z-index: 1000;
  display: flex;
  align-items: center;
}

.back-icon-circle {
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(4px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.back-icon-circle text {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  padding-bottom: 4rpx; /* 微调对齐 */
}

/* --- 顶部 Hero 区域 --- */
.hero-area {
  position: relative;
  height: 600rpx; /* 稍微加高以适应沉浸式 */
  width: 100%;
}
.hero-img { width: 100%; height: 100%; }
.hero-overlay {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.6) 100%);
}
.hero-content {
  position: absolute; bottom: 80rpx; left: 40rpx; right: 40rpx;
  color: #fff;
  display: flex; flex-direction: column;
}
.tag {
  background: #FF7043; color: white; 
  font-size: 22rpx; padding: 6rpx 16rpx; border-radius: 8rpx;
  align-self: flex-start; margin-bottom: 20rpx; font-weight: bold;
}
.title {
  /* [修改] 使用变量适配 */
  font-size: var(--text-2xl); 
  font-weight: 900; margin-bottom: 16rpx;
  line-height: 1.3; text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3);
}
.subtitle {
  /* [修改] 使用变量适配 */
  font-size: var(--text-base); 
  opacity: 0.9; font-style: italic;
}

/* --- 文章主体 --- */
.article-body {
  background: var(--bg-color); /* 跟随全局背景 */
  position: relative;
  top: -60rpx; /* 向上覆盖 */
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 50rpx 40rpx;
  min-height: 800rpx;
}
.dark-mode .article-body { background: #1C1917; }

/* 作者栏 */
.meta-row { display: flex; justify-content: space-between; align-items: center; margin-bottom: 50rpx; }
.author-info { display: flex; align-items: center; }
.avatar { width: 80rpx; height: 80rpx; border-radius: 50%; margin-right: 20rpx; border: 2rpx solid #FFCCBC; }
.author-text { display: flex; flex-direction: column; }
.name { 
  font-size: var(--text-base); 
  font-weight: bold; color: var(--text-main); 
}
.date { 
  font-size: var(--text-xs); 
  color: var(--text-sub); 
}
.action-btn { 
  font-size: var(--text-xs); 
  color: #FF7043; background: #FBE9E7; padding: 10rpx 24rpx; border-radius: 30rpx; font-weight: bold; 
}

/* 导语 */
.intro-box {
  background: rgba(254, 201, 157, 0.15); /* 淡蜜桃色 */
  padding: 30rpx 40rpx;
  border-radius: 20rpx;
  border-left: 8rpx solid #FF8A65;
  color: #5D4037;
  font-size: var(--text-base);
  line-height: 1.6;
  margin-bottom: 60rpx;
  font-style: italic;
  position: relative;
}
.dark-mode .intro-box { background: rgba(255,255,255,0.05); color: #BCAAA4; }
.quote-icon {
  position: absolute; top: -20rpx; left: 20rpx;
  font-size: 80rpx; color: #FFCCBC; opacity: 0.5; font-family: serif;
}

/* 正文段落 */
.section { margin-bottom: 50rpx; }

/* 斯语块 */
.swahili-block {
  display: flex; align-items: flex-start;
  margin-bottom: 20rpx;
}
.audio-marker {
  width: 50rpx; height: 50rpx; background: #FFF3E0;
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
  font-size: 24rpx; margin-right: 20rpx; flex-shrink: 0; color: #FF7043;
}
.sw-text {
  font-size: var(--text-xl); 
  font-weight: bold; color: #BF360C;
  line-height: 1.5; letter-spacing: 1rpx;
}
.dark-mode .sw-text { color: #FFAB91; }

/* 中文块 */
.chinese-text {
  font-size: var(--text-base); 
  color: var(--text-main);
  line-height: 1.8; margin-bottom: 24rpx;
  text-align: justify;
}

/* 文化贴士 */
.culture-tip {
  background: #EFEBE9;
  padding: 24rpx; border-radius: 16rpx;
  margin-top: 20rpx;
}
.dark-mode .culture-tip { background: #3E2723; }
.tip-title { 
  display: block; 
  font-size: var(--text-sm); 
  font-weight: bold; color: #5D4037; margin-bottom: 10rpx; 
}
.dark-mode .tip-title { color: #D7CCC8; }
.tip-content { 
  font-size: var(--text-xs); 
  color: #8D6E63; line-height: 1.5; 
}
.dark-mode .tip-content { color: #A1887F; }

.footer-end { text-align: center; color: var(--text-sub); font-size: 24rpx; margin-top: 60rpx; letter-spacing: 4rpx; opacity: 0.6; }