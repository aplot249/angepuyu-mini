/* --- 遮罩层 --- */
.mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  /* backdrop-filter: blur(4px); */
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.mask.show {
  opacity: 1;
  visibility: visible;
}

/* --- 弹窗主体 --- */
.modal-box {
  position: fixed;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 600rpx;
  background: #ffffff;
  border-radius: 40rpx;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1); /* 弹性效果 */
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  overflow: visible;
}

.modal-box.show {
  opacity: 1;
  visibility: visible;
  transform: translate(-50%, -50%) scale(1);
}

/* --- 顶部装饰 --- */
.modal-header {
  position: relative;
  height: 120rpx;
  display: flex;
  justify-content: center;
  margin-top: -60rpx; /* 图标上浮 */
}

.icon-bg-circle {
  position: absolute;
  width: 160rpx; height: 160rpx;
  background: #fff;
  border-radius: 50%;
  top: 0;
  box-shadow: 0 -10rpx 20rpx rgba(0,0,0,0.02);
}

.icon-wrapper {
  position: relative;
  width: 140rpx; height: 140rpx;
  background: linear-gradient(135deg, #FFAB91 0%, #FF7043 100%);
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  top: 10rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 112, 67, 0.3);
}

.icon {
  font-size: 70rpx;
  animation: wave 2.5s infinite;
  transform-origin: 70% 70%;
}

/* --- 内容区 --- */
.modal-content {
  padding: 40rpx 50rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 40rpx;
  font-weight: 900;
  color: #3E2723;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

.message-container {
  background: #FFF8F3;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(255, 112, 67, 0.1);
}

.message {
  font-size: 28rpx;
  color: #5D4037;
  line-height: 1.8;
  text-align: justify;
}

/* 装饰点 */
.decoration-dots {
  display: flex;
  gap: 12rpx;
  margin-bottom: 40rpx;
}
.dot {
  width: 12rpx; height: 12rpx;
  border-radius: 50%;
  background: #E0E0E0;
}
.dot.d1 { background: #FFCCBC; }
.dot.d2 { background: #FFAB91; }
.dot.d3 { background: #FF7043; }

/* 按钮 */
.confirm-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(90deg, #FF7043, #F4511E);
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(244, 81, 30, 0.3);
  border: none;
}

.btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-arrow {
  margin-left: 10rpx;
  font-size: 36rpx;
  font-weight: normal;
}

/* 关闭图标 */
.close-area {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx; height: 70rpx;
  border: 2rpx solid rgba(255,255,255,0.6);
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
}
.close-icon {
  color: rgba(255,255,255,0.8);
  font-size: 32rpx;
}

/* 招手动画 */
@keyframes wave {
  0% { transform: rotate(0.0deg) }
  10% { transform: rotate(14.0deg) }
  20% { transform: rotate(-8.0deg) }
  30% { transform: rotate(14.0deg) }
  40% { transform: rotate(-4.0deg) }
  50% { transform: rotate(10.0deg) }
  60% { transform: rotate(0.0deg) }
  100% { transform: rotate(0.0deg) }
}